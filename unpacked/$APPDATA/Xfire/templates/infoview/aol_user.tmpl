<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<style>
		%include styles/shared.css%
		%include styles/user.css%
	</style>
	
	<script language="JavaScript">
	<!--
		%include scripts/shared.js%
		%include scripts/linkify.js%
		%include scripts/user.js%	
	//-->
	</script>
	
</head>

<body>
<table id='main_table' cellpadding='0' cellspacing='0' border='0' width='100%'><tr><td><!-- needed for scrollbar determination -->
<div id='wrap'>

<div id='user_box' class='box'>
	<div class='box_title'>
		%user_display_name%<br>
		<div id='user_nickname_id' class='small_text'><b>%text_nickname%</b>: %user_nickname%</div>
		<div id='username_id' class='small_text'><b>%text_username%</b>: %username%</div>
		<a class='small_text' href=' ' href_type='plugin_profile_link'>%text_plugin_profile%</a><br>
	</div>
	<div class='box_details'>
      <table>
        <tr>
          <td id='user_avatar_id'>
            <img src='%user_avatar_url%' />
          </td>
          <td valign='top'>
            <div id='status_id'>%status%</div>
          </td>
        </tr>
      </table>
		</div>
	</div>

	<div id='plugin_user_box' class='box'>
		<div class='box_title'>%plugin_cat_title%</div>
		<div class='box_details'>
			<div><a href='%plugin_home_page_link%' target='_blank'>%text_plugin_home_page%</a></div>
			<div><a href='%plugin_extra_link1%' target='_blank'>%text_plugin_extra_link1%</a></div>
		</div>
	</div>

	<!-- NEED AN ELEMENT TO FIRE AN EVENT ON -->
	<span id="fire_event_id"></span>

	<script language="JavaScript">
	<!--
		render_user_box();
	//-->
	</script>
	
</div>
</td></tr></table>
</body>
</html>
