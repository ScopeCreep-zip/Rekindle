		img
		{
			border: none;
		}
		.spread_out_list
		{
			list-style-type: square;
			margin-top: 0.5em;
			margin-left: 2.5em;
			margin-bottom: 1em;
		}
		.spread_out_list li
		{ 
			padding-top: 1em;
		}
		#games_list
		{
			margin: 0;
			padding: 0;
		}
		.games_list_item
		{
			height: 16px;
			padding:0;
			padding-left: 12px;
			margin:0;
			margin-top: 2px;
			margin-bottom: 2px;
			white-space: nowrap;
		}
		.games_list_item img
		{
			padding-right: 4px;
		}
		.games_list_item span
		{
			display: inline-block;
			height: 16px;
			line-height: 16px;
			vertical-align: 3px;
		}
		#shlink
		{
			text-align: right;
		}
		.fakelink, .filestab
		{
			color: rgb(%color_hyperlink%); 
			font-weight: bold; 
			text-decoration: underline;
			cursor: pointer;
		}

		.box_details input.text
		{
			border:1px solid rgb(%color_shaded_x:0.1%);
			color: rgb(%color_text%);
			background-color:rgb(%color_text_inverted%);
			text-align: left;
			font-weight: bold;
		}
		
		.box_details input.button
		{
			border: 1px solid rgb(%color_shaded_x:0.3%);
			background-color: rgb(%color_text%);
			color: rgb(%color_background%);
			vertical-align: middle;
			font-size: 0.90em;
			cursor: pointer;
		}
		
		.rate_output_box
		{
		  width: 50px;
		  padding-right: 3px;
		  text-align: right;
		  border:1px solid rgb(%color_shaded_x:0.1%);
		  color: rgb(%color_text%);
		  background-color:rgb(%color_background%);
		  font-weight: bold;
		}

		.box .box_details p
		{
			margin-top: 5px;
			margin-left: 5px;
		}
