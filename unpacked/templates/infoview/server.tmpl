<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<style>
		%include styles/shared.css%
		%include styles/user.css%
		%include styles/server.css%
	</style>
	
	<script language="JavaScript">
	<!--
		%include scripts/shared.js%
		%include scripts/voicechat.js%
		%include scripts/linkify.js%
		%include scripts/colorize.js%
		%include scripts/personal_file_transfers.js%
		%include scripts/user.js%	
		%include scripts/server.js%
	//-->
	</script>
	
</head>

<body>
<table id='main_table' cellpadding='0' cellspacing='0' border='0' width='100%'><tr><td><!-- needed for scrollbar determination -->
<div id='wrap'>

	<div id='user_box' class='box'>
		<div class='box_title'>
			%user_display_name%&nbsp;<img id='speakerimg' src='%media_template_folder%infoview/images/icon_speaker_green.gif' style='visibility: hidden' align='top' /><br/>
			<div id='user_clan_nickname_id' class='small_text'><b>Clan Nickname</b>: %clan_member_nickname%</div>
			<div id='user_nickname_id' class='small_text'><b>%text_nickname%</b>: %user_nickname%</div>
			<div id='username_id' class='small_text'><b>%text_username%</b>: %username%</div>
			<a id='profile_link' class='small_text' href='%profile_url%%username%' target='_blank'>%text_profile%</a><br/>
      <span id='blocked_user_link' class='fake_small_link' action='privacytab'>%text_blocked_user%</span>
		</div>
		<div class='box_details'>
      <table>
        <tr>
          <td id='user_avatar_id'>
            <img src='%user_avatar_url%' />
          </td>
          <td valign='top'>
            <div id='status_id'>%status%</div>
            <div id='voice_chat_id'><b>%text_voicechat%</b>: %voice_serverip%</div>
          </td>
        </tr>
      </table>
		</div>
	</div>


  <div id='user_broadcast_box' class='box'>
    <div class='box_title'>
      <table width='100%' border='0' cellpadding='0' cellspacing='0'>
        <tr>
          <td>%text_live_video%</td>
          <td class='small_text' align='right'>
            <a href=' ' href_type='broadcast_options'>%broadcast_bindings%</a>
          </td>
        </tr>
      </table>
    </div>
    <div class='box_details'>
      <div id='user_broadcast_id'></div>
    </div>
  </div>

  <div id='clans_box' class='box'>
    <div class='box_title'>%text_clans_and_guilds%</div>
	<div id='clans_box_detail_id' class='box_details'>
		<!-- CLANS WILL DYNAMICALLY BE LOADED, SEE render_clans_box() -->
	</div>
  </div>

  <!-- WILL DISPLAY IF THERE ARE PERSONAL FILE TRANSFERS -->
  <!-- THE ACTUAL FILE DOWNLOADS WILL DYNAMICALLY BE ADDED AS CHILDREN NODES BY JAVASCRIPT CALLS -->
  <div id='pft_uploads_id' class='box'>
    <div class='box_title'>%uploads_text%</div>
    <div class='box_details'>
      <table class='pft_table'>
        <tbody id='pft_uploads_table_id'></tbody>
      </table>
    </div>
  </div>

  <div id='pft_downloads_id' class='box'>
    <div class='box_title'>%downloads_text%</div>
    <div class='box_details'>
      <table class='pft_table'>
        <tbody id='pft_downloads_table_id'></tbody>
      </table>
    </div>
  </div>

  <div id='game_server_box' class='box'>
    <div class='box_title'>
      <span id='game_server_box_title'>%text_playinggame%</span>
      <br/>
      <span id='refresh_server_id' class='fakelink'>%text_refresh%</span>
    </div>
    <div class='box_details'>
      <table class='detail_table'>
        <tbody id='server_tbody_id'>
          <tr>
            <td colspan='2'>
              <table id='game_title_table'>
                <tr>
                  <th id='game_icon'>
                    <img src='%game_iconfilename%' width='32' height='32' border="0" />
                    <img src='%game_lockiconfilename%' id='game_lock' border='0' />
                  </th>
                  <td>
                    <span class='fakelink' action='view_games_page' short_name='%game_shortname%'>%game_longname%</span>
                  </td>
                  <td id='launch_game_col' class='launch_game'>
                    <span class='fakelink' action='launch_game' short_name='%game_shortname%'>%text_launch%</span>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          <tr id='server_query_status_row'>
            <th>%text_serverquerystatus%</th>
            <td>%game_serverquerystatus%</td>
          </tr>
          <tr id='server_name_row'>
            <th>%text_servername%</th>
            <td id='server_name'>%game_servername%</td>
          </tr>
          <tr id='server_ip_row'>
            <th>%text_serverip%</th>
            <td>
              <a id='server_flag' href='%country_code_url%' target='_blank'>
                <img src='%server_flag_url%' title='%country_code%' alt='' width='25' height='15' align='left' border='0'/>
              </a>
              %game_serverip%
            </td>
          </tr>
          <tr id='server_ping_row'>
            <th>%text_serverping%</th>
            <td>%game_serverping%</td>
          </tr>
          <tr id='server_info_row'>
            <th>%text_serverinfo%</th>
            <td>%game_serverinfo%</td>
          </tr>
          <tr id='server_game_type_row'>
            <th>%text_servergametype%</th>
            <td>%game_servergametype%</td>
          </tr>

          <!-- NOTE: render_game_stats_hash() will insert rows here -->

          <tr id='rcon_row'>
            <th>%rcon_password_text%</th>
            <td>
              <input class='text' type='password' name='rcon_password' id='rcon_password' value='' size='15' />
            </td>
          </tr>

        </tbody>
      </table>

      <div id='player_team_list_id' style='display: none;'>
        <!-- render_player_team_list() will insert data here -->
      </div>

      <div id='raw_server_info_id' style='display: none;'>
        <!-- render_raw_server_info() will insert data here -->
      </div>

      <!-- If you need em... -->
      <div id="extraDiv1" style="display: none;">
        <span></span>
      </div>
      <div id="extraDiv2" style="display: none;">
        <span></span>
      </div>
      <div id="extraDiv3" style="display: none;">
        <span></span>
      </div>
      <div id="extraDiv4" style="display: none;">
        <span></span>
      </div>

    </div>
  </div>

  <div id='user_videos_box' class='box'>
    <div class='box_title'>
      <table width='100%' border='0' cellpadding='0' cellspacing='0'>
        <tr>
          <td>%text_videos%</td>
          <td class='small_text' align='right'>
            <a href=' ' href_type='video_options'>%video_capture_bindings%</a>
          </td>
        </tr>
        <tr>
          <td id='take_your_own_link' class='small_text' colspan='2'>
            <a href='%video_tour_url%' target='_blank'>%text_take_your_own_ss%</a>
          </td>
        </tr>
      </table>
    </div>
    <div class='box_details'>
      <div id='user_videos_id'></div>
    </div>
  </div>

  <div id='user_ss_box' class='box'>
    <div class='box_title'>
      <table width='100%' border='0' cellpadding='0' cellspacing='0'>
        <tr>
          <td>%screenshots_text%</td>
          <td id='capture_bindings' class='small_text' align='right'>
            <a href=' ' href_type='ingame_options'>%ss_capture_bindings%</a>
          </td>
        </tr>
        <tr>
          <td id='take_your_own_link' class='small_text' colspan='2'>
            <a href='%ss_tour_url%' target='_blank'>%text_take_your_own_ss%</a>
          </td>
        </tr>
      </table>
    </div>
    <div class='box_details'>
      <div id='user_ss_id'></div>
    </div>
  </div>

  <!-- NEED AN ELEMENT TO FIRE AN EVENT ON -->
	<!-- SEE RebuildEventSinks() FOR DESCRIPTION. -->
	<span id="fire_event_id"></span>
			
	<script language="JavaScript">
	<!--
		render_user_box();
		render_clans_box();
		render_server_box();
		render_user_videos();
		render_user_ss();
		render_user_broadcast();
	//-->
	</script>
	
</div>
</td></tr></table>
</body>
</html>
