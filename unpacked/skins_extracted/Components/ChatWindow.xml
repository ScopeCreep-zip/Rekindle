<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="ChatMainWindow" Class="MainWindow" MinWidth="332" MinHeight="290" DefaultWidth="332" DefaultHeight="290" />
    
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Component Name="ChatTopRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Triggers>
            <Trigger Type="OnRightClick">ContextMenuSys</Trigger>    
        </Triggers>
        <Images State="Normal">
            <Image Type="TopLeft">frame1_top_left</Image>
            <Image Type="Top">frame1_top_middle</Image>
            <Image Type="TopRight">frame1_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="ChatLeftSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Triggers>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Left">frame1_leftside_middle</Image>
        </Images>
    </Component>

    <Component Name="ChatBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">frame1_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="ChatRightSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Triggers>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Right">frame1_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="ChatBottomRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Triggers>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="BottomLeft">frame1_bottom_left</Image>
            <Image Type="Bottom">frame1_bottom_middle</Image>
            <Image Type="BottomRight">frame1_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Component Name="ChatResizeGripperTL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperTop" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeT</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperTR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperL" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperR" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperBL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperBottom" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeB</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="ChatResizeGripperBR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBR</Trigger>
        </Triggers>
        <!-- <Images State="Normal">
            <Image Type="Middle">frame1_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">frame1_gripper_bottom_right_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">frame1_gripper_bottom_right_down</Image>
        </Images> -->
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Content
    //////////////////////////////////////////////
    -->
    <Component Name="ChatUserContainer" Class="Tile" MaxHeight="18" Stretch="ToContent" Events="Transparent" Default="Activate" />
    
    <Component Name="ChatUser" Class="Text" Stretch="ToContent" Events="Transparent" Default="Activate">
        <Triggers>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
            <Trigger Type="OnDeactivate">State(Disabled)</Trigger>
        </Triggers>
        <Text State="Normal" Align="Left" Font="Arial" Size="11" Bold="True" Color="FriendNameCG">%displayuser%</Text>
        <Text State="Disabled" Align="Left" Font="Arial" Size="11" Bold="False" Italics="False" Color="DisabledTextCG">%displayuser%</Text>
    </Component>
    
    <Component Name="ChatArea" Class="ChatArea" Scrollbar="XfireScrollbar" Color="ChatViewBGCG">
        <Text Color_Other="ChatOtherNameCG" Color_OtherText="ChatOtherTextCG" Color_Personal="ChatPersonalNameCG" Color_PersonalText="ChatPersonalTextCG" />
     </Component>
    
    <Component Name="ChatEditContainer" Class="Tile" MinHeight="50" MaxHeight="50" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">chat_edit_background_middle</Image>
        </Images>
    </Component>
    
    <Component Name="ChatEdit" Class="ChatEdit" MinHeight="50" MaxHeight="50" WindowFocus="True" Scrollbar="XfireScrollbar" Color="ChatEditBGCG">
        <Text Color="ChatPersonalTextCG" Color_Selected="ListColorSelectedCG" Color_NonFocus="ListColorSelectedDiabledCG" Color_SelectedText="ListColorSelectedTextCG" />
    </Component>
    
    <Component Name="ChatTypingMessage" Class="Text" Stretch="ToContent" Events="Transparent">
        <Triggers>
            <Trigger Type="OnActiveUserTyping">State(Disabled)</Trigger>
            <Trigger Type="OnActiveUserNotTyping">State(Normal)</Trigger>
        </Triggers>
        <Text State="Normal" />
        <Text State="Disabled" Font="Arial" Size="10" Bold="False" Color="UserTypingMessageCG">TypingMessage</Text>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="ChatButtonBar" Class="Tile" MinHeight="44" MaxHeight="44" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_norm</Image>
            <Image Type="Top">button_bar_middle_norm</Image>
            <Image Type="TopRight">button_bar_right_norm</Image>
        </Images>
    </Component>
    
    <!--[BEGIN] Info View Buttons -->
    <Component Name="ButtonChatInfoIn" Class="SkinLauncher" MinWidth="13" MaxWidth="13" MinHeight="115" MaxHeight="115" Stretch="ToContent" Accelerator="ALT(VK_LEFT)" ToolTip="ButtonRetractInfoTip">
        <Triggers>
            <Trigger Type="OnClick">LaunchSkin</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_info_in_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_info_in_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_info_in_down</Image>
        </Images>
        <Popup SaveState="1">ChatInfoViewPopup</Popup>
    </Component>
    
    <Component Name="ButtonChatInfoOut" Class="SkinLauncher" MinWidth="13" MaxWidth="13" MinHeight="115" MaxHeight="115" Stretch="ToContent" Default="Click" Accelerator="ALT(VK_RIGHT)" ToolTip="ButtonExpandInfoTip">
        <Triggers>
            <Trigger Type="OnClick">LaunchSkin</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_info_out_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_info_out_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_info_out_down</Image>
        </Images>
        <Popup SaveState="1">ChatInfoViewPopup</Popup>
    </Component>
    <!--[END] Info View Buttons -->
    
    <Component Name="ChatButtonSend" Class="PushButton" MinWidth="51" MaxWidth="51" MinHeight="50" MaxHeight="50" Stretch="ToContent" ToolTip="ButtonSendChatTip">
        <Triggers>
            <Trigger Type="OnAppCanChat">State(Normal)</Trigger>
            <Trigger Type="OnAppCannotChat">State(Disabled)</Trigger>
            <Trigger Type="OnClick">SendMessage</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_send_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_send_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_send_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_send_disabled</Image>
        </Images>
    </Component>
    
    <Component Name="ChatButtonJoin" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="ButtonJoinGameTip" DisabledToolTip="ButtonJoinGameDisabledTip">
        <Triggers>
            <Trigger Type="OnClick">JoinFriend</Trigger>
            <Trigger Type="OnAppCanJoin">State(Normal)</Trigger>
            <Trigger Type="OnAppCannotJoin">State(Disabled)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_join_game_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_join_game_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_join_game_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_join_game_disabled</Image>
        </Images>
    </Component>
    
    <!--[BEGIN] Call Buttons -->
    <Component Name="TabbedTalkingState" Class="TabControl" MinWidth="14" MaxWidth="14" MinHeight="14" MaxHeight="14" Stretch="ToContent" Events="Transparent" ControlGroupId="4" GroupId="4">
        <Triggers>
            <Trigger Type="OnAppUserStoppedTalking">GroupMessage(0)</Trigger>
            <Trigger Type="OnAppUserStartedTalking">GroupMessage(1)</Trigger>
            <Trigger Type="OnAppCanHostVoiceChat">GroupMessage(0)</Trigger>
            <Trigger Type="OnAppCannotVoiceChat">GroupMessage(0)</Trigger>
            <Trigger Type="OnAppCanVoiceChat">GroupMessage(0)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">transparent</Image>
        </Images>
    </Component>
    
    <Component Name="ChatButtonTalking" Class="PushButton" MinWidth="14" MaxWidth="14" MinHeight="14" MaxHeight="14" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="Middle">icon_speaker_unmuted</Image>
        </Images>
    </Component>
    
    <Component Name="ChatButtonNotTalking" Class="PushButton" MinWidth="14" MaxWidth="14" MinHeight="14" MaxHeight="14" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="Middle">transparent</Image>
        </Images>
    </Component>
    
    <Component Name="TabbedCall" Class="TabControl" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" GroupId="2" ControlGroupId="2">    
        <Triggers>
            <Trigger Type="OnAppCanHostVoiceChat">GroupMessage(0)</Trigger>
            <Trigger Type="OnAppCannotVoiceChat">GroupMessage(0)</Trigger>
            <Trigger Type="OnAppCanVoiceChat">GroupMessage(1)</Trigger>
            <Trigger Type="OnAppCanCancelVoiceChat">GroupMessage(2)</Trigger>
            <Trigger Type="OnAppCanLeaveVoiceChat">GroupMessage(3)</Trigger>
        </Triggers>
        <Images>
            <Image Type="Middle">transparent</Image>
        </Images>
    </Component>
    
    <Component Name="ChatButtonCall" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="ButtonCallTip" DisabledToolTip="ButtonCallDisabledTip">
        <Triggers>
            <Trigger Type="OnClick">AppHostVoiceChat</Trigger>
            <Trigger Type="OnAppCanHostVoiceChat">State(Normal)</Trigger>
            <Trigger Type="OnAppCannotHostVoiceChat">State(Disabled)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_call_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_call_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_call_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_call_disabled</Image>
        </Images>
    </Component>
    
    <!-- @NOTE These components are into "Components/Common.xml":
                    - TabbedMute
                - ChatButtonMuteSelf
                    - ChatButtonUnmuteSelf
                    - ChatButtonAnswerCall
                    - ChatButtonCancelCall -->
    
    <Component Name="ChatButtonLeaveCall" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="ButtonLeaveCallTip">
        <Triggers>
            <Trigger Type="OnClick">AppLeaveVoiceChat</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_call_connected_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_call_cancel_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_call_cancel_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_call_disabled</Image>
        </Images>
    </Component>
    <!--[END] Call Buttons -->
</Components>