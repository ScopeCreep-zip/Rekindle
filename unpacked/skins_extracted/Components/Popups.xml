    <Component Name="InfoViewTopRow" Class="Tile" MinHeight="19" MaxHeight="19" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="TopLeft">frame2_top_left</Image>
            <Image Type="Top">frame2_top_middle</Image>
            <Image Type="TopRight">frame2_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="InfoViewLeftSide" Class="Tile" MinWidth="19" MaxWidth="19" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">frame2_leftside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="InfoViewBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">frame2_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="InfoViewRightSide" Class="Tile" MinWidth="19" MaxWidth="19" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Right">frame2_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="InfoViewBottomRow" Class="Tile" MinHeight="19" MaxHeight="19" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="BottomLeft">frame2_bottom_left</Image>
            <Image Type="Bottom">frame2_bottom_middle</Image>
            <Image Type="BottomRight">frame2_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Component Name="PopupResizeGripperR" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeR</Trigger>
        </Triggers>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Main Window
    //////////////////////////////////////////////
    -->
    <Component Name="MainInfoViewPopup" Class="Tile" MinWidth="196" MinHeight="385" DefaultWidth="196" BindX="False" BindY="True" ResizeY="100" />
    
    <Component Name="MainInfoViewContent" Class="InfoView" Color="InfoViewBGCG" Scrollbar="XfireScrollbar">
        <Text Font="Arial" Size="11" Color="InfoViewTextCG" Color_FoF="ListFoFTextCG" Color_Friend="ListFriendTextCG" Color_Offline="ListOfflineTextCG" Color_Hyperlink="LinkTextCG" />
    </Component>
    
    <Component Name="MainInfoViewWebSearchEdit" Class="WebSearchEditView" MinWidth="118" MinHeight="16" ToolTip="WebSearchTip">
        <Text Font="Arial" Size="11" Color="RoomNameEditTextCG" Align="Left" Background="RoomNameEditBGCG">StatusText</Text>
    </Component>    
    
    
    
    <!--
    //////////////////////////////////////////////
    // Chat Window
    //////////////////////////////////////////////
    -->
    <Component Name="ChatInfoViewPopup" Class="Tile" MinWidth="196" DefaultWidth="196" BindX="False" BindY="True" ResizeY="100" />
    
    <Component Name="ChatInfoViewContent" Class="InfoView" Color="InfoViewBGCG" Scrollbar="XfireScrollbar">
        <Text Font="Arial" Size="11" Color="InfoViewTextCG" Color_FoF="ListFoFTextCG" Color_Friend="ListFriendTextCG" Color_Offline="ListOfflineTextCG" Color_Hyperlink="LinkTextCG" />
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // XIG Tooltip
    //////////////////////////////////////////////
    -->
    <Component Name="XIGToolTip" Class="ToolTip" Stretch="ToContent" Color="ToolTipBGCG">
        <Text Font="Arial" Size="11" Color="ToolTipTextCG" Indent="3">%s</Text>
    </Component>
</Components>