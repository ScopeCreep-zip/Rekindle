<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGMusicPlayerWindow" Class="MainWindow" MinWidth="306" MinHeight="200" DefaultWidth="306" DefaultHeight="200" DefaultX="470" DefaultY="300">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGMusicPlayerTitle" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="12" Bold="True" Color="XIGOverlayTitleCG">%music_player_type%</Text>
    </Component>
    
    <Component Name="XIGMusicPlayerCurrentTrack" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="10" Bold="False" Color="XIGMusicPlayerTrackTextCG">%music_current_track%</Text>
    </Component>
    
    <Component Name="XIGMusicPlayerTrackArtistDivider" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="10" Bold="False" Color="XIGMusicPlayerTrackTextCG">--</Text>
    </Component>
    
    <Component Name="XIGMusicPlayerCurrentArtist" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="10" Bold="False" Color="XIGMusicPlayerTrackTextCG">%music_current_artist%</Text>
    </Component>
    
    <!-- Music player playlist header then playlist text -->
    <Component Name="XIGMusicPlayerPlaylistHeader" Class="Tile" MinHeight="20" MaxHeight="20" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">header_left</Image>
            <Image Type="Middle">header_middle</Image>
            <Image Type="Right">header_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerPlaylistHeaderText" Class="Text" MinHeight="14" Stretch="ToContent">
        <Text Font="Arial" Size="10" Bold="True" Color="HeaderTextCG">Now Playing: </Text>
    </Component>
    
    <!-- Music player playlist -->
    <Component Name="XIGMusicPlayerPlaylist" Class="MusicPlaylist" ToolTipTile="XIGToolTipPopup" SelectedFocusColor="ListColorSelectedTextCG" HasIcons="False">
        <Fonts>
            <Font Type="DisplayName" Font="Arial" Size="10" Bold="False" Italics="False" Color="ListFriendTextCG" />
            <Font Type="SelectedDisplayName" Font="Arial" Size="10" Bold="True" Italics="False" Color="ListColorSelectedTextCG" />
        </Fonts>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGMusicPlayerControlsContainer" Class="Tile" MinHeight="16" MaxHeight="16" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_small</Image>
            <Image Type="Top">button_bar_middle_small</Image>
            <Image Type="TopRight">button_bar_right_small</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerButtonPrevTrack" Class="MusicButtonPrevious" MinWidth="32" MaxWidth="32" MinHeight="14" MaxHeight="14" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">button_xig_music_previous_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_music_previous_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_music_previous_down</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerButtonNextTrack" Class="MusicButtonNext" MinWidth="32" MaxWidth="32" MinHeight="14" MaxHeight="14" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">button_xig_music_next_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_music_next_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_music_next_down</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerButtonPlayPauseTrack" Class="MusicButtonPlayPause" MinWidth="32" MaxWidth="33" MinHeight="14" MaxHeight="14" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True" />
    
    <Component Name="XIGMusicPlayerButtonPlayTrack" Class="Tile" MinWidth="32" MaxWidth="32" MinHeight="14" MaxHeight="14" Stretch="ToContent" Events="Transparent" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">button_xig_music_play_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_music_play_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_music_play_down</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerButtonPauseTrack" Class="Tile" MinWidth="33" MaxWidth="33" MinHeight="14" MaxHeight="14" Stretch="ToContent" Events="Transparent" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">button_xig_music_pause_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_music_pause_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_music_pause_down</Image>
        </Images>
    </Component>
    
    <!-- Music player volume control, and its child tiles that serve as the image for the button -->
    <Component Name="XIGMusicPlayerVolume" Class="VolumeControl" MinWidth="93" MinHeight="14" MaxHeight="14" Stretch="ToContent" ToolTip="XIGMusicButtonMuteTip" ToolTipTile="XIGToolTipPopup" Type="MusicVolume" />
    
    <Component Name="XIGMusicPlayerVolumeMute" Class="Tile" MinWidth="39" MaxWidth="39" MinHeight="14" MaxHeight="14" Stretch="ToContent" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">button_xig_music_mute_norm</Image>
        </Images>
    </Component>
    
    <Component Name="XIGMusicPlayerVolumeBar" Class="Tile" MinWidth="1" MaxWidth="1" MinHeight="7" MaxHeight="7" Stretch="ToContent" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="Middle">xig_music_volume_bar_on</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">xig_music_volume_bar_off</Image>
        </Images>
    </Component>
    
    <!-- <Component Name="XIGMusicPlayerVolumeBackground" Class="Tile" MinWidth="93" MaxWidth="93" MinHeight="11" MaxHeight="11" Stretch="ToContent" DrawOnTopMost="True">
        <Images State="Normal">
            <Image Type="TopLeft">xig_music_volume_background_left</Image>
            <Image Type="Top">xig_music_volume_background_middle</Image>
            <Image Type="TopRight">xig_music_volume_background_right</Image>
        </Images>
    </Component> -->
    
    <!-- <Component Name="XIGMusicPlayerVolumeBarOverlay" Class="Tile" MinWidth="90" MaxWidth="90" MinHeight="12" MaxHeight="12" Stretch="ToContent" DrawOnTopMost="True" Events="Transparent">
        <Images State="Normal">
            <Image Type="Middle">xig_music_volume_bar_overlay</Image>
        </Images>
    </Component> -->
</Components>