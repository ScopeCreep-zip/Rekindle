<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGBarOverlay" Class="MainWindow" MinHeight="29" MaxHeight="29">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGBarBG" Class="XfireBar" MinHeight="29" MaxHeight="29" Stretch="ToContent" Spacing="10">
        <Images State="Normal">
            <Image Type="TopLeft">xigbar_left</Image>
            <Image Type="Top">xigbar_middle</Image>
            <Image TYpe="TopRight">xigbar_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGBarXfireLogoNoHover" Class="WindowModeButton" MinWidth="83" MaxWidth="83" MinHeight="29" MaxHeight="29" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" ToolTipAlign="Above">
        <Images State="Normal">
            <Image Type="Middle">xigbar_logo</Image>
        </Images>
    </Component>
    
    <Component Name="XIGBarAlertStatus" Class="XfireBarAlertStatus" MaxHeight="14" Stretch="ToContent">
        <Fonts>
            <Font Type="RoomLink" Font="Arial" Size="11" Bold="True" Underline="True" Color="ChatOtherHyperLinkCG" />
            <Font Type="Room" Font="Arial" Size="11" Bold="False" Color="ChatOtherTextCG" />
            <!-- Friend sent a link -->
            <Font Type="UserLink" Font="Arial" Size="11" Bold="True" Underline="True" Color="ChatOtherHyperLinkCG" />
            <!-- Friends name + text -->
            <Font Type="User" Font="Arial" Size="11" Bold="False" Color="ChatOtherTextCG" />
            <!-- You sent a link -->
            <Font Type="SendLink" Font="Arial" Size="11" Bold="True" Color="ChatPersonalHyperLinkCG" />
            <!-- Your name + text -->
            <Font Type="Send" Font="Arial" Size="11" Bold="False" Color="ChatPersonalTextCG" />
        </Fonts>
        <Images State="UserIcon">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="UserIconOverlay">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="RoomIcon">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
        <Images State="RoomIconOverlay">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
    </Component>
    
    <Component Name="XIGBarFPSContainer" Class="Tile" MinWidth="50" MinHeight="29" MaxHeight="29" />
    
    <Component Name="XIGBarFPS" Class="Text" MinHeight="18" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="12" Bold="True" Color="XIGBarTextCG">%fps%</Text>
    </Component>
    
    <Component Name="XIGBarClock" Class="Text" MinHeight="18" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="12" Bold="True" Color="XIGBarTextCG">%clock%</Text>
    </Component>
    
    <Component Name="XIGBarVertSeperator" Class="Tile" MinWidth="1" MaxWidth="1" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">xigbar_vert_separator</Image>
        </Images>
    </Component>
    
    
    
