<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Component Name="XIGOverlaysTopRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="TopLeft">frame1_top_left</Image>
            <Image Type="Top">frame1_top_middle</Image>
            <Image Type="TopRight">frame1_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGOverlaysLeftSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">frame1_leftside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGOverlaysBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">frame1_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="XIGOverlaysRightSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Right">frame1_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGOverlaysBottomRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="BottomLeft">frame1_bottom_left</Image>
            <Image Type="Bottom">frame1_bottom_middle</Image>
            <Image Type="BottomRight">frame1_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Component Name="XIGOverlaysResizeGripperTL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperTop" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeT</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperTR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperL" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperR" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperBL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperBottom" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeB</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOverlaysResizeGripperBR" Class="Tile" MinWidth="12" MaxWidth="12" MinHeight="12" MaxHeight="12" Stretch="ToContent" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBR</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Live Stats (FPS, Clock, Video, Etc)
    //////////////////////////////////////////////
    -->
    <!-- This is for the in-game overlays so when you drag the window
        and it goes transparent, you can still see where you are dragging it to. -->
    <Component Name="XIGOverlayOutline" Class="Tile" DrawOnTopMost="True" Events="Transparent">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
            <Trigger Type="OnInActiveMode">HideTile</Trigger>
            <Trigger Type="OnActiveMode">State(Normal)</Trigger>
            <Trigger Type="OnInActiveMode">State(Disabled)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="TopLeft">xig_overlay_outline_top_left</Image>
            <Image Type="Top">xig_overlay_outline_top</Image>
            <Image Type="TopRight">xig_overlay_outline_top_right</Image>
            <Image Type="Left">xig_overlay_outline_left</Image>
            <Image Type="Right">xig_overlay_outline_right</Image>
            <Image Type="BottomLeft">xig_overlay_outline_bottom_left</Image>
            <Image Type="Bottom">xig_overlay_outline_bottom</Image>
            <Image Type="BottomRight">xig_overlay_outline_bottom_right</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="TopLeft">transparent</Image>
        </Images>
    </Component>
    
    <Component Name="XIGLiveStatsTopRow" Class="Tile" MinHeight="5" MaxHeight="5" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="TopLeft">xig_overlay_top_left</Image>
            <Image Type="Top">xig_overlay_top_middle</Image>
            <Image Type="TopRight">xig_overlay_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGLiveStatsLeftSide" Class="Tile" MinWidth="5" MaxWidth="5" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">xig_overlay_leftside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGLiveStatsBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">xig_overlay_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="XIGLiveRightSide" Class="Tile" MinWidth="5" MaxWidth="5" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Right">xig_overlay_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGLiveBottomRow" Class="Tile" MinHeight="5" MaxHeight="5" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="BottomLeft">xig_overlay_bottom_left</Image>
            <Image Type="Bottom">xig_overlay_bottom_middle</Image>
            <Image Type="BottomRight">xig_overlay_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGOverlayButtonClose" Class="PushButton" MinWidth="18" MaxWidth="18" MinHeight="16" MaxHeight="16" Stretch="ToContent" ToolTip="ButtonCloseTip" TooltipTile="XIGToolTipPopup" DrawOnTopmost="True">
        <Triggers>
            <Trigger Type="OnClick">HideWindow</Trigger>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
            <Trigger Type="OnDeactivate">State(Disabled)</Trigger>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
            <Trigger Type="OnInActiveMode">HideTile</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_overlay_close_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_overlay_close_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_overlay_close_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_xig_overlay_close_disabled</Image>
        </Images>
    </Component>
</Components>