<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGVoiceOverlay" Class="MainWindow" MinWidth="113" DefaultWidth="113" MinHeight="100" DefaultHeight="120" DefaultX="10" DefaultY="340">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
            <Trigger Type="OnActiveMode">ShowVoiceChatWindow</Trigger>
            <Trigger Type="OnIncomingVoiceChat">ShowVoiceChatWindow</Trigger>
            <Trigger Type="OnOutgoingVoiceChat">ShowVoiceChatWindow</Trigger>
            <Trigger Type="OnStartVoiceChat">ShowVoiceChatWindow</Trigger>
            <Trigger Type="OnEndVoiceChat">ShowVoiceChatWindow</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGVoiceControl" Class="ActiveVoice" Events="Transparent">
        <Fonts>
            <Font Type="ActiveFont" Font="Arial" Size="10" Color="XIGLiveStatsTextCG" />
            <Font Type="InactiveFont" Font="Arial" Size="10" Color="XIGLiveStatsTextDeactivatedCG" />
        </Fonts>
        <Images State="Disabled">
            <Image Type="Left">icon_speaker_unmuted</Image>
        <Image Type="Right">icon_speaker_silent</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Left">icon_speaker_muted</Image>
            <Image Type="Right">icon_speaker_silent_muted</Image>
        </Images>
        <Images State="ActiveIcon">
          <Image Type="Middle">icon_speaker_unmuted</Image>
        </Images>
        <Images State="ActiveMutedIcon">
          <Image Type="Middle">icon_speaker_muted</Image>
        </Images>
        <Images State="InactiveIcon">
          <Image Type="Middle">icon_speaker_silent</Image>
        </Images>
        <Images State="InactiveMutedIcon">
          <Image Type="Middle">icon_speaker_silent_muted</Image>
        </Images>
    </Component>
</Components>