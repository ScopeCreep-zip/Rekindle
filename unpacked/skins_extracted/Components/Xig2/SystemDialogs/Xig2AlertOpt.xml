<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGAlertOptions" Class="MainWindow" MinWidth="298" MinHeight="225" DefaultWidth="298" DefaultHeight="225" DefaultX="470" DefaultY="10">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGAlertOptionsTitle" Class="Text" Stretch="ToContent" Events="Transparent">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGSystemDialogTitleCG">AlertOptionsTitle</Text>
    </Component>
    
    <Component Name="XIGAlertOptionsPermanentCheckBox" Class="PrefCheckbox" MinWidth="16" MaxWidth="16" MinHeight="16" MaxHeight="16" Stretch="ToContent" DrawOnTopMost="True" ControlLabel="AlertPermanent">
        <Images State="Normal">
            <Image Type="Middle">button_checkbox_unchecked</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_checkbox_checked</Image>
        </Images>
    </Component>
    
    <Component Name="XIGAlertOptionsPermanentText" Class="Text" MinHeight="13" Stretch="ToContent">
        <Text Font="Arial" Size="12" Bold="False" Color="XIGSystemDialogTextCG">AlwaysShowAlertText</Text>
    </Component>
    
    <Component Name="XIGAlertOptionsDurationEdit" MinHeight="17" MinWidth="60" Class="PrefEdit" Stretch="ToContent" CaretColor="XIGCaretCG" SelectionColor="ListColorSelectedCG" SelectionTextColor="ListColorSelectedTextCG" SelectionSelectorColor="XIGCaretCG" ControlLabel="AlertDuration" Numeric="True">
        <Fonts>
            <Font Type="Text" Font="Arial" Size="12" Bold="False" Color="TextFieldTextCG" />
        </Fonts>
    </Component>
    
    <Component Name="XIGAlertOptionsDurationEditBackground" Class="Tile" MinHeight="19" MinWidth="62" Stretch="ToContent" Default="Activate" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">text_top_left</Image>
            <Image Type="Top">text_top_middle</Image>
            <Image Type="TopRight">text_top_right</Image>
            <Image Type="Left">text_leftside_middle</Image>
            <Image Type="Middle">text_middle</Image>
            <Image Type="Right">text_rightside_middle</Image>
            <Image Type="BottomLeft">text_bottom_left</Image>
            <Image Type="Bottom">text_bottom_middle</Image>
            <Image Type="BottomRight">text_bottom_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGAlertOptionsDurationText" Class="Text" Stretch="ToContent">
        <Text Font="Arial" Size="12" Bold="False" Color="XIGSystemDialogTextCG">DisplayDurationText</Text>
    </Component>
</Components>