<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Component Name="XIGSystemDialogTopRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">AppDragWindow</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="TopLeft">frame1_top_left</Image>
            <Image Type="Top">frame1_top_middle</Image>
            <Image Type="TopRight">frame1_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGSystemDialogLeftSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">frame1_leftside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGSystemDialogBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">frame1_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="XIGSystemDialogRightSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">frame1_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGSystemDialogBottomRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="BottomLeft">frame1_bottom_left</Image>
            <Image Type="Bottom">frame1_bottom_middle</Image>
            <Image Type="BottomRight">frame1_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Window Content
    //////////////////////////////////////////////
    -->
    <Component Name="XIGDialogTitle" Class="Text" Stretch="ToContent" Events="Transparent">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGSystemDialogTitleCG">%dialog_box_caption%</Text>
    </Component>
        
    <Component Name="XIGDialogText" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent" Multiline="True">
        <Text Font="Arial" Size="12" Bold="False" Color="XIGSystemDialogTextCG">%dialog_box_text%</Text>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Component Name="XIGSystemDialogResizeGripperTL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperTop" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeT</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperTR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperL" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperR" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperBL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperBottom" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeB</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGSystemDialogResizeGripperBR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Stretch="ToContent" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBR</Trigger>
        </Triggers>
        <!-- <Images State="Normal">
            <Image Type="Middle">frame1_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">frame1_gripper_bottom_right_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">frame1_gripper_bottom_right_down</Image>
        </Images> -->
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGDialogButtonBar" Class="Tile" MinHeight="44" MaxHeight="44" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_large</Image>
            <Image Type="Top">button_bar_middle_large</Image>
            <Image Type="TopRight">button_bar_right_large</Image>
        </Images>
    </Component>
    
    <Component Name="XIGDialogButtonClose" Class="PushButton" MinWidth="18" MaxWidth="18" MinHeight="16" MaxHeight="16" Stretch="ToContent" ToolTip="ButtonCloseTip" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True">
        <Triggers>
            <Trigger Type="OnClick">DialogBoxCancel</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_dialog_close_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_dialog_close_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_dialog_close_down</Image>
        </Images>
    </Component>
    
    <Component Name="XIGDialogButtonOk" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="XIGButtonOkTip" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True">
        <Triggers>
            <Trigger Type="OnClick">DialogBoxOK</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_dialog_ok_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_dialog_ok_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_dialog_ok_down</Image>
        </Images>
    </Component>
    
    <Component Name="XIGDialogButtonCancel" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="XIGButtonCancelTip" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="True">
        <Triggers>
            <Trigger Type="OnClick">DialogBoxCancel</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_dialog_cancel_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_dialog_cancel_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_dialog_cancel_down</Image>
        </Images>
    </Component>
</Components>