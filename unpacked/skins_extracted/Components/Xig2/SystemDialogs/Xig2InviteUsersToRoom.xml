<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGRoomInvite" Class="MainWindow" MinWidth="344" MinHeight="275" DefaultWidth="344" DefaultHeight="275" DefaultX="470" DefaultY="10">
        <Triggers>
            <Trigger Type="OnActiveMode">ShowTile</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGRoomInviteTitle" Class="Text" Stretch="ToContent" Events="Transparent">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGSystemDialogTitleCG">XIGRoomInviteTitle</Text>
    </Component>
    
    <Component Name="XIGRoomInviteInstructions" Class="Text" Stretch="ToContent" Events="Transparent" Multiline="True">
        <Text Font="Arial" Size="11" Bold="False" Color="XIGSystemDialogTextCG">XIGRoomInviteInstructions</Text>
    </Component>
    
    <Component Name="XIGRoomInviteFriendsListHeaderText1" Class="Text" MinHeight="14" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="11" Bold="False" Color="HeaderTextCG">Name</Text>
    </Component>
    
    <Component Name="XIGRoomInviteFriendsListHeaderText2" Class="Text" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="11" Bold="False" Color="HeaderTextCG">Status</Text>
    </Component>
    
    <Component Name="XIGRoomInviteFriendsListHeaderText3" Class="Text" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="11" Bold="False" Color="HeaderTextCG">Game Info</Text>
    </Component>
    
    <Component Name="XIGRoomInviteFriendsList" Class="InviteUsersFriendsList" ToolTipTile="XIGToolTipPopup" SelectedFocusColor="ListColorSelectedCG">
        <Fonts>
            <Font Type="DisplayName" Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG" />
            <Font Type="FofDisplayName" Font="Arial" Size="11" Bold="False" Color="ListFoFTextCG" />
            <Font Type="OfflineDisplayName" Font="Arial" Size="11" Bold="False" Italics="True" Color="ListOfflineTextCG" />
            <Font Type="Status" Font="Arial" Size="10" Bold="False" Color="ListFriendTextCG" />
            <Font Type="SelectedDisplayName" Font="Arial" Size="11" Bold="False" Italics="False" Color="ListColorSelectedTextCG" />
        </Fonts>
    </Component>
    
    <Component Name="XIGRoomInstructionsSeparator" Class="Tile" MinHeight="5" MaxHeight="5" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="bottom">horizontal_separator_middle</Image>
        </Images>
    </Component>
</Components>