    </Component>
    
    <Component Name="XIGActiveWindowButtonDisabledCall" Class="Tile" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Images State="Normal">
