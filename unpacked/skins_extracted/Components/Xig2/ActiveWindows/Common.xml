<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Component Name="XIGActiveWindowsTopRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="TopLeft">frame1_top_left</Image>
            <Image Type="Top">frame1_top_middle</Image>
            <Image Type="TopRight">frame1_top_right</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowsLeftSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Left">frame1_leftside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowsBackground" Class="Tile" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Middle">frame1_window_filler</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowsRightSide" Class="Tile" MinWidth="13" MaxWidth="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="Right">frame1_rightside_middle</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowsBottomRow" Class="Tile" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Images State="Normal">
            <Image Type="BottomLeft">frame1_bottom_left</Image>
            <Image Type="Bottom">frame1_bottom_middle</Image>
            <Image Type="BottomRight">frame1_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Component Name="XIGActiveWindowsResizeGripperTL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperTop" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeT</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperTR" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeUR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperL" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperR" Class="Tile" MinWidth="10" MaxWidth="10" Cursor="ResizeWE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeR</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperBL" Class="Tile" MinWidth="10" MaxWidth="10" MinHeight="10" MaxHeight="10" Cursor="ResizeNESW">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBL</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperBottom" Class="Tile" MinHeight="10" MaxHeight="10" Cursor="ResizeNS">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeB</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGActiveWindowsResizeGripperBR" Class="Tile" MinWidth="12" MaxWidth="12" MinHeight="12" MaxHeight="12" Stretch="ToContent" Cursor="ResizeNWSE">
        <Triggers>
            <Trigger Type="OnLeftButtonDown">ResizeBR</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_edit_mode_gripper_bottom_right_norm</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGActiveWindowsButtonClose" Class="PushButton" MinWidth="18" MaxWidth="18" MinHeight="16" MaxHeight="16" Stretch="ToContent" ToolTip="ButtonCloseTip" TooltipTile="XIGToolTipPopup" DrawOnTopMost="False">
        <Triggers>
            <Trigger Type="OnClick">HideWindow</Trigger>
            <Trigger Type="OnActivate">State(Normal)</Trigger>
            <Trigger Type="OnDeactivate">State(Disabled)</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_active_window_close_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_active_window_close_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_active_window_close_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_xig_active_window_close_disabled</Image>
        </Images>
    </Component>
    
    <!--[BEGIN] Call Buttons -->
    <Component Name="XIGChatsTabbedCall" Class="CallReflectorButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="False" ButtonType="Voice" />
    
