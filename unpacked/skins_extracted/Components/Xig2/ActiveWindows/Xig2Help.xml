<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGHelp" Class="MainWindow" MinWidth="393" MinHeight="323" DefaultWidth="393" DefaultHeight="323" DefaultX="10" DefaultY="10">
        <Triggers>
            <Trigger Type="OnShowHelp">ShowWindow</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGHelpTitle" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGActiveWindowTitleCG">XIGHelpTitle</Text>
    </Component>
    
    <Component Name="XIGHelpText" Class="HelpText" Stretch="ToContent" DrawOnTopMost="False">
        <Fonts>
            <Font Type="UserLink" Font="Arial" Size="11" Bold="True" Color="LinkTextCG" />
            <Font Type="User" Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG" />
        </Fonts>
        <Images State="UserIcon">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="UserIconOverlay">
            <Image Type="Middle">icon_chat</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGHelpButtonBar" Class="Tile" MinHeight="84" MaxHeight="84" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_large</Image>
            <Image Type="Top">button_bar_middle_large</Image>
            <Image Type="TopRight">button_bar_right_large</Image>
        </Images>
    </Component>
</Components>