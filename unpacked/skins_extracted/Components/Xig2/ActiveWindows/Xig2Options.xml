<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGOptions" Class="MainWindow" MinWidth="393" MinHeight="323" DefaultWidth="393" DefaultHeight="323" DefaultX="10" DefaultY="10">
        <Triggers>
            <Trigger Type="OnShowOptions">ShowWindow</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGOptionsTitle" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGActiveWindowTitleCG">XIGOptionsTitle</Text>
    </Component>
    
    <Component Name="XIGOptionsTextContainer" Class="Tile" MinWidth="141" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False" />
    
    <Component Name="XIGOptionsSpeakerVolumeText" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG">AdjustSpeakerVolumeText</Text>
    </Component>
    
    <Component Name="XIGOptionsMicVolumeText" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG">AdjustMicVolumeText</Text>
    </Component>
    
    <Component Name="XIGOptionsMicSensitivityText" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG">AdjustMicSensitivyText</Text>
    </Component>
    
    <Component Name="XIGOptionsSlidersContainer" Class="Tile" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False" />
    
    <Component Name="XIGSpeakerSlider" Class="SliderControl" MinWidth="67" MaxWidth="67" MinHeight="11" MaxHeight="11" Stretch="ToContent" ToolTip="AdjustSpeakerVolumeTip" ToolTipTile="XIGToolTipPopup" Range="100" Step="1" Type="Speaker" DrawOnTopMost="False" />
    
    <Component Name="XIGMicSlider" Class="SliderControl" MinWidth="67" MaxWidth="67" MinHeight="11" MaxHeight="11" Stretch="ToContent" ToolTip="AdjustMicVolumeTip" ToolTipTile="XIGToolTipPopup" Range="100" Step="1" Type="Mic" DrawOnTopMost="False" />
    
    <Component Name="XIGMicSensitivitySlider" Class="SliderControl" MinWidth="67" MaxWidth="67" MinHeight="11" MaxHeight="11" Stretch="ToContent" ToolTip="AdjustMicSensitivityTip" ToolTipTile="XIGToolTipPopup" Range="100" Step="1" Type="MicSensitivity" DrawOnTopMost="False" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGOptionsButtonBar" Class="Tile" MinHeight="84" MaxHeight="84" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_large</Image>
            <Image Type="Top">button_bar_middle_large</Image>
            <Image Type="TopRight">button_bar_right_large</Image>
        </Images>
    </Component>
</Components>