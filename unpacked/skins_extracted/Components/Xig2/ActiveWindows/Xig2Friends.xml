<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGFriends" Class="MainWindow" MinWidth="393" MinHeight="323" DefaultWidth="393" DefaultHeight="323" DefaultX="10" DefaultY="10">
        <Triggers>
            <Trigger Type="OnShowHome">ShowWindow</Trigger>
            <Trigger Type="OnShowFriends">ShowWindow</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGFriendsTitle" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Font="Arial" Size="11" Align="Left" Bold="True" Color="XIGActiveWindowTitleCG">XIGFriendsTitle</Text>
    </Component>
    
    <!-- Groups List -->
    <Component Name="XIGFriendsGroupsListContainer" Class="Tile" MinWidth="156" MaxWidth="156" Stretch="ToContent" Events="Transparent" />
    
    <Component Name="XIGFriendsGroupsHeaderText" Class="Text" MinHeight="13" MaxHeight="13" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="11" Bold="True" Color="HeaderTextCG">Groups</Text>
    </Component>
    
    <Component Name="XIGFriendsGroupsList" Class="FriendFiltersList" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" ItemIndentLeft="5" SelectedFocusColor="XIGFocusedColorCG">
        <Fonts>
            <Font Type="DisplayName" Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG" />
            <Font Type="SelectedDisplayName" Font="Arial" Size="11" Bold="False" Italics="False" Color="ListColorSelectedTextCG" />
        </Fonts>
    </Component>
    
    <!-- Friends List -->
    <Component Name="XIGFriendsFriendsListContainer" Class="Tile" Stretch="ToContent" Events="Transparent" />
    
    <Component Name="XIGFriendsFriendsListHeaderText" Class="Text" MinHeight="13" MaxHeight="13" Stretch="ToContent" Events="Transparent">
        <Text Font="Arial" Size="11" Bold="True" Align="Center" Color="HeaderTextCG">%friends_list_header:55%</Text>
    </Component>
    
    <Component Name="XIGFriendsFriendsList" Class="FriendsList" ToolTipTile="XIGToolTipPopup" SelectedFocusColor="XIGFocusedColorCG">
        <Triggers>
            <Trigger Type="OnClick">ChatFriend</Trigger>
        </Triggers>
        <Fonts>
            <Font Type="DisplayName" Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG" />
            <Font Type="FofDisplayName" Font="Arial" Size="11" Bold="False" Color="ListFoFTextCG" />
            <Font Type="OfflineDisplayName" Font="Arial" Size="11" Bold="False" Italics="True" Color="ListOfflineTextCG" />
            <Font Type="Status" Font="Arial" Size="11" Bold="False" Color="ListFriendTextCG" />
            <Font Type="SelectedDisplayName" Font="Arial" Size="11" Bold="False" Italics="False" Color="ListColorSelectedTextCG" />
        </Fonts>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGFriendsButtonBar" Class="Tile" MinHeight="84" MaxHeight="84" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_large</Image>
            <Image Type="Top">button_bar_middle_large</Image>
            <Image Type="TopRight">button_bar_right_large</Image>
        </Images>
    </Component>
    
    <Component Name="XIGFriendsTabbedCall" Class="CallReflectorButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="False" ButtonType="Voice" />
    
    <Component Name="XIGActiveWindowButtonAddFriend" Class="PushButton" MinWidth="196" MaxWidth="196" MinHeight="29" MaxHeight="29" Stretch="ToContent" ToolTip="ButtonAddFriendTip" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="False">
        <Triggers>
            <Trigger Type="OnClick">AddFriend</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_friend_add_norm_large</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_friend_add_hover_large</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_friend_add_down_large</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_friend_add_disabled_large</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowButtonChat" Class="PushButton" MinWidth="75" MaxWidth="75" MinHeight="41" MaxHeight="41" Stretch="ToContent" ToolTip="ButtonChatFriendTip" DisabledToolTip="ButtonChatFriendDisabledTip" ToolTipTile="XIGToolTipPopup" ButtonType="Chat" DrawOnTopMost="False">
        <Triggers>
            <Trigger Type="OnClick">ChatFriend</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_friend_chat_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_friend_chat_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_friend_chat_down</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">button_friend_chat_disabled</Image>
        </Images>
    </Component>
</Components>