<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Components SYSTEM "XfireSkin.dtd">

<Components>
    <Component Name="XIGChats" Class="MainWindow" MinWidth="393" MinHeight="323" DefaultWidth="393" DefaultHeight="323" DefaultX="10" DefaultY="10">
        <Triggers>
            <Trigger Type="OnShowChats">ShowWindow</Trigger>
        </Triggers>
    </Component>
    
    <Component Name="XIGChatsTitle" Class="Text" Stretch="ToContent" Events="Transparent" DrawOnTopMost="False">
        <Text Align="Left" Font="Arial" Size="11" Bold="True" Color="XIGActiveWindowTitleCG">XIGChatsTitle</Text>
    </Component>
    
    <!-- Chats list -->
    <Component Name="XIGChatsListContainer" Class="Tile" MinWidth="156" MaxWidth="156" Stretch="ToContent" Events="Transparent" />
    
    <!-- This has a button which is in the buttons section -->
    <Component Name="XIGChatsAllChatsText" Class="Text" MinHeight="13" MaxHeight="13" Stretch="ToContent">
        <Text Font="Arial" Size="11" Bold="True" Align="Left" Color="HeaderTextCG">Active Chats</Text>
    </Component>
    
    <Component Name="XIGChatsList" Class="ChatsList" ToolTipTile="XIGToolTipPopup" ItemIndentLeft="5">
        <Fonts>
            <Font Type="DisplayName" Font="Arial" Size="11" Bold="True" Color="ListFriendTextCG" />
            <Font Type="OfflineDisplayName" Font="Arial" Size="11" Bold="False" Italics="False" Color="ListOfflineTextCG" />
            <Font Type="SelectedDisplayName" Font="Arial" Size="11" Bold="True" Italics="False" Color="ListColorSelectedTextCG" />
        </Fonts>
        <Images State="AllChatsIcon">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
        <Images State="RoomIcon">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
        <Images State="SingleChatIcon">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="Disabled">
            <Image Type="Middle">icon_chat</Image>
        </Images>
    </Component>
    
    <!-- Chats messages -->
    <Component Name="XIGChatsMsgsContainer" Class="Tile" Stretch="ToContent" Events="Transparent" />
    
    <Component Name="XIGChatsMsgsTitleIcon" Class="Tile" Stretch="ToContent" DrawOnTopMost="False">
        <Images State="Normal">
            <Image Type="Middle">%chat_title_icon:15%</Image>
        </Images>
    </Component>
    
    <Component Name="XIGChatsMsgsHeaderText" Class="Text" Stretch="ToContent">
        <Text Font="Arial" Size="12" Bold="False" Color="HeaderTextCG">%chat_title:15%</Text>
    </Component>
    
    <Component Name="XIGChatsChatArea" Class="ChatArea" CaretColor="XIGCaretCG" SelectionSelectorColor="XIGCaretCG" SelectionColor="ListColorSelectedCG" SelectionColor_InActive="ListColorSelectedCG" SelectionTextColor="ListColorSelectedTextCG" SelectionTextColor_InActive="ListColorSelectedTextCG">
        <Fonts>
            <Font Type="RoomLink" Font="Arial" Size="11" Bold="True" Underline="True" Color="ChatOtherHyperLinkCG" />
            <Font Type="Room" Font="Arial" Size="11" Bold="False" Color="ChatOtherTextCG" />
            <!-- Friend sent a link -->
            <Font Type="UserLink" Font="Arial" Size="11" Bold="True" Underline="True" Color="ChatOtherNameCG" />
            <!-- Friends name + text -->
            <Font Type="User" Font="Arial" Size="11" Bold="False" Color="ChatOtherNameCG" />
            <!-- You sent a link -->
            <Font Type="SendLink" Font="Arial" Size="11" Bold="True" Color="ChatPersonalTextCG" />
            <!-- Your name + text -->
            <Font Type="Send" Font="Arial" Size="11" Bold="False" Color="ChatPersonalTextCG" />
        </Fonts>
        <Images State="UserIcon">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="UserIconOverlay">
            <Image Type="Middle">icon_chat</Image>
        </Images>
        <Images State="RoomIcon">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
        <Images State="RoomIconOverlay">
            <Image Type="Middle">icon_group_chat</Image>
        </Images>
    </Component>
    
    <Component Name="XIGChatsChatEdit" Class="ChatEdit" MinHeight="20" MaxHeight="20" Stretch="ToContent" CaretColor="XIGCaretCG" SelectionSelectorColor="XIGCaretCG" SelectionColor="ListColorSelectedCG" SelectionTextColor="ListColorSelectedTextCG" DrawOnTopMost="True">
        <Fonts>
            <Font Type="Text" Font="Arial" Size="12" Bold="False" Align="Left" Color="ChatPersonalTextCG" />
        </Fonts>
    </Component>

    <Component Name="XIGChatsChatEditContainer" Class="Tile" MinHeight="23" MaxHeight="23" Stretch="ToContent" Default="Activate">
        <Images State="Normal">
            <Image Type="TopLeft">text_top_left</Image>
            <Image Type="Top">text_top_middle</Image>
            <Image Type="TopRight">text_top_right</Image>
            <Image Type="Left">text_leftside_middle</Image>
            <Image Type="Middle">text_middle</Image>
            <Image Type="Right">text_rightside_middle</Image>
            <Image Type="BottomLeft">text_bottom_left</Image>
            <Image Type="Bottom">text_bottom_middle</Image>
            <Image Type="BottomRight">text_bottom_right</Image>
        </Images>
    </Component>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Component Name="XIGChatsButtonBar" Class="Tile" MinHeight="84" MaxHeight="84" Stretch="ToContent" Events="Transparent">
        <Images State="Normal">
            <Image Type="TopLeft">button_bar_left_large</Image>
            <Image Type="Top">button_bar_middle_large</Image>
            <Image Type="TopRight">button_bar_right_large</Image>
        </Images>
    </Component>
    
    <Component Name="XIGActiveWindowButtonAllChats" Class="AllChatsControl" Stretch="ToContent" PushType="Sticky" DrawOnTopMost="False" />
    
    <Component Name="XIGChatsCloseConvo" Class="PushButton" MinWidth="8" MaxWidth="8" MinHeight="8" MaxHeight="8" Stretch="ToContent" ToolTip="ButtonCloseChatTip" ToolTipTile="XIGToolTipPopup" DrawOnTopMost="False">
        <Triggers>
            <Trigger Type="OnClick">AttachedClose</Trigger>
        </Triggers>
        <Images State="Normal">
            <Image Type="Middle">button_xig_active_window_close_chat_norm</Image>
        </Images>
        <Images State="Hover">
            <Image Type="Middle">button_xig_active_window_close_chat_hover</Image>
        </Images>
        <Images State="Down">
            <Image Type="Middle">button_xig_active_window_close_chat_down</Image>
        </Images>
    </Component>
    
    
</Components>