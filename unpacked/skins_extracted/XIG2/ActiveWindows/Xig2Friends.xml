<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ActiveWindow SYSTEM "XfireSkin.dtd">

<ActiveWindow>
    <Tile Name="Friends" ResizeX="100" ResizeY="100" Component="XIGFriends">
        <!--
        //////////////////////////////////////////////
        // Resize Grippers
        //////////////////////////////////////////////
        -->
        <Tile Name="ResizeGripperTL" Z="26" JustX="Left" JustY="Top" Component="XIGActiveWindowsResizeGripperTL" />
        <Tile Name="ResizeGripperT" Z="25" JustY="Top" ResizeX="100" IndentRight="ResizeGripperTR.Width" IndentLeft="ResizeGripperTL.Width" Component="XIGActiveWindowsResizeGripperTop" />
        <Tile Name="ResizeGripperTR" Z="26" JustX="Right" JustY="Top" Component="XIGActiveWindowsResizeGripperTR" />
        <Tile Name="ResizeGripperL" Z="25" JustX="Left" JustY="Center" ResizeY="100" IndentTop="ResizeGripperTL.Height" IndentBottom="ResizeGripperBL.Height" Component="XIGActiveWindowsResizeGripperL" />
        <Tile Name="ResizeGripperR" Z="25" JustX="Right" JustY="Center" ResizeY="100" IndentTop="ResizeGripperTR.Height" IndentBottom="ResizeGripperBR.Height" Component="XIGActiveWindowsResizeGripperR" />
        <Tile Name="ResizeGripperBL" Z="26" JustX="Left" JustY="Bottom" Component="XIGActiveWindowsResizeGripperBL" />
        <Tile Name="ResizeGripperBottom" Z="25" JustY="Bottom" ResizeX="100" IndentRight="ResizeGripperBR.Width" IndentLeft="ResizeGripperBL.Width"  Component="XIGActiveWindowsResizeGripperBottom" />
        <Tile Name="ResizeGripperBR" X="7" Y="7" Z="26" JustX="Right" JustY="Bottom" Component="XIGActiveWindowsResizeGripperBR" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Window Draggers
        //////////////////////////////////////////////
        -->
        <Tile Name="WindowDragger" Z="10" ResizeX="100" ResizeY="100" Component="XIGWindowDragger" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Window Frame
        //////////////////////////////////////////////
        -->
        <Tile Name="TopRow" Z="1" JustY="Top" ResizeX="100" Component="XIGActiveWindowsTopRow" />
        <Tile Name="LeftSide" Z="1" JustX="Left" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGActiveWindowsLeftSide" />
        <Tile Name="Background" Z="1" ResizeX="100" ResizeY="100" IndentRight="RightSide.Width" IndentBottom="BottomRow.Height" IndentLeft="LeftSide.Width" IndentTop="TopRow.Height" Component="XIGActiveWindowsBackground" />
        <Tile Name="RightSide" Z="1" JustX="Right" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGActiveWindowsRightSide" />
        <Tile Name="BottomRow" Z="1" JustY="Bottom" ResizeX="100" Component="XIGActiveWindowsBottomRow" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Content
        //////////////////////////////////////////////
        -->
        <!--[BEGIN] Xfire Logo -->
        <!-- <Tile Name="XfireLogo" X="13" Y="25" Z="99" Component="XfireLogoNoLink" /> -->
        <!--[END] Xfire Logo -->
        
        
        <!--[BEGIN] Info Bar -->
        <Tile Name="InfoBar" Y="5" Z="24" ResizeX="100" IndentLeft="5" IndentRight="5" Component="InfoBar">
            <!--[BEGIN] Window Title -->
            <Tile Name="WindowTitle" X="4" Y="5" Z="25" ResizeX="100" IndentRight="93" Component="XIGFriendsTitle" />
            <!--[END] Window Title -->
            
            <!--[BEGIN] Username -->
            <!-- <Tile Name="UsernameContainer" X="4" Y="WindowTitle.Bottom+3" Z="25" ResizeX="100" IndentRight="93" Component="UsernameContainer">
                <Tile Name="Username" Z="26" JustY="Center" Component="Username" />
            </Tile> -->
            <!--[END] Username -->
            
            
            <!--[BEGIN] Window Control -->
            <Tile Name="ButtonClose" X="5" Y="3" Z="25" JustX="Right" ControlId="8" TabOrder="40" Component="XIGActiveWindowsButtonClose" />
            <!--[END] Window Control -->
        </Tile>
        <!--[END] Info Bar -->
        
        
        <!--[BEGIN] Tabs -->
        <Tile Name="TabsContainer" Y="InfoBar.Bottom+1" Z="25" ResizeX="100" IndentRight="5" IndentLeft="5" Component="TabButtonsContainer">
            <Tile Name="ButtonFriendsTab" Y="2" Z="26" Component="XIGActiveWindowButtonFriendsTabActive" />
            <Tile Name="TabSeparator1" X="ButtonFriendsTab.Right" Z="26" Component="TabVerticalSeparator" />
            <Tile Name="ButtonChatRoomsTab" X="TabSeparator1.Right" Y="ButtonFriendsTab.Top" Z="26" ControlId="89" TabOrder="49" Component="XIGActiveWindowButtonChatRoomsTab" />
            <Tile Name="TabSeparator2" X="ButtonChatRoomsTab.Right" Z="26" Component="TabVerticalSeparator" />
            <Tile Name="ButtonChatsTab" X="TabSeparator2.Right" Y="ButtonFriendsTab.Top" Z="26" ControlId="9" TabOrder="50" Component="XIGActiveWindowButtonChatsTab" />
            <Tile Name="TabSeparator3" X="ButtonChatsTab.Right" Z="26" Component="TabVerticalSeparator" />
            <Tile Name="ButtonOptionsTab" X="TabSeparator3.Right" Y="ButtonFriendsTab.Top" Z="26" ControlId="91" TabOrder="51" Component="XIGActiveWindowButtonOptionsTab" />
            <Tile Name="TabSeparator4" X="ButtonOptionsTab.Right" Z="26" Component="TabVerticalSeparator" />
            <Tile Name="ButtonHelpTab" X="TabSeparator4.Right" Y="ButtonFriendsTab.Top" Z="26" ControlId="10" TabOrder="60" Component="XIGActiveWindowButtonHelpTab" />
            <Tile Name="TabSeparator5" X="ButtonHelpTab.Right" Z="26" Component="TabVerticalSeparator" />
        </Tile>
        <!--[END] Tabs -->
        
        
        <!--[BEGIN] Content Container -->
        <Tile Name="ContentContainer" Y="TabsContainer.Bottom+1" Z="24" ResizeX="100" ResizeY="100" IndentRight="5" IndentBottom="91" IndentLeft="5" Component="ContentContainer">
            <Tile Name="GroupsListContainer" Y="2" Z="24" ResizeY="100" IndentLeft="2" IndentBottom="2" Component="XIGFriendsGroupsListContainer">
                <!--[BEGIN] Groups List Header -->
                <Tile Name="GroupsListHeader" Z="25" ResizeX="100" Component="Header">
                    <Tile Name="GroupsHeaderText" Y="3" Z="26" JustX="Center" Component="XIGFriendsGroupsHeaderText" />
                </Tile>
                <!--[END] Groups List Header -->
                
                <!--[BEGIN] Groups List -->
                <Tile Name="GroupsList" Y="GroupsListHeader.Bottom" Z="25" ResizeX="100" ResizeY="100" IndentRight="16" ControlId="55" TabOrder="9" Component="XIGFriendsGroupsList">
                    <Tile Name="GroupsListItemBG" ResizeX="100" ResizeY="100" Component="XIGListItemBG" />
                    <Tile Name="GroupsListItemBGSelected" ResizeX="100" ResizeY="100" Component="XIGListItemBGSelected" />
                </Tile>
                <Tile Name="GroupsListVertScrollBar" X="GroupsList.Right" Y="GroupsListHeader.Bottom" Z="25" ResizeY="100" AttachedControlId="55" Component="XIGVertScrollBar" />
                <!--[END] Groups List -->
                
                <!-- <Tile Name="GroupsListBackground" Z="2" ResizeX="100" ResizeY="100" IndentTop="TabsContainer.Height+24" IndentRight="2" IndentLeft="2" Component="XfireListBackdrop" /> -->
            </Tile>
            
            
            <!-- <Tile Name="VerticalSeparator" X="GroupsListContainer.Right" Z="25" ResizeY="100" Component="VerticalSeparator" /> -->
            
            
            <Tile Name="FriendsListContainer" X="GroupsListContainer.Right+2" Y="GroupsListContainer.Top" Z="25" ResizeX="100" ResizeY="100" IndentRight="2" IndentBottom="2" Component="XIGFriendsFriendsListContainer">
                <!--[BEGIN] Friends List Header -->
                <Tile Name="FriendsListHeader" Z="25" ResizeX="100" Component="Header">
                    <Tile Name="FriendsTitleText" JustX="Center" Y="3" ResizeX="100" IndentRight="7" IndentLeft="7" Component="XIGFriendsFriendsListHeaderText" />
                </Tile>
                <!--[END] Friends List Header -->
                
                <!--[BEGIN] Friends List -->
                <Tile Name="FriendsList" Y="FriendsListHeader.Bottom" Z="25" ResizeX="100" ResizeY="100" IndentRight="16" ControlId="5" AttachedControlId="55" TabOrder="10" Default="SetFocusControl" Component="XIGFriendsFriendsList">
                    <Tile Name="FriendsListItemBG" ResizeX="100" ResizeY="100" Component="XIGListItemBG" />
                    <Tile Name="FriendsListItemBGSelected" ResizeX="100" ResizeY="100" Component="XIGListItemBGSelected" />
                </Tile>
                <Tile Name="FriendsListVertScrollBar" X="FriendsList.Right" Y="FriendsListHeader.Bottom" Z="25" ResizeY="100" AttachedControlId="5" Component="XIGVertScrollBar" />
                <!--[END] Friends List -->
                
                <!-- <Tile Name="FriendsListBackground" Z="2" ResizeX="100" ResizeY="100" IndentTop="TabsContainer.Height+18" Component="XfireListBackdrop" /> -->
            </Tile>
        </Tile>
        <!--[END] Content Container -->
        
        
        <!--[BEGIN] Opacity Slider -->
        <Tile Name="OpacitySlider" X="5" Y="7" Z="75" JustX="Left" JustY="Bottom" TabOrder="2" ControlId="1802" FocusedColor="XIGFocusedColor" Component="XIGOpacitySlider">
            <Tile Name="OpacTrack" ResizeX="100" Component="XIGOpacityTrack" />
            <Tile Name="OpacGripper" Component="XIGOpacityGripper" />
        </Tile>
        <!--[END] Opacity Slider -->
        
        
        
        <!--
        //////////////////////////////////////////////
        // Buttons
        //////////////////////////////////////////////
        -->
        <Tile Name="FriendsButtonBar" Y="ContentContainer.Bottom+2" Z="25" ResizeX="100" IndentRight="5" IndentLeft="5" Component="XIGFriendsButtonBar">
            <!--[BEGIN] Buttons -->
            <Tile Name="ButtonChat" X="1" Y="1" Z="25" ControlId="6" AttachedControlId="5" TabOrder="20" Component="XIGActiveWindowButtonChat" />
            <Tile Name="Separator1" X="ButtonChat.Right" Z="30" Component="ButtonBarVerticalSeparator" />
            <Tile Name="TabbedCall" X="Separator1.Right" Y="ButtonChat.Top" Z="25" AttachedControlId="5" ControlId="56" TabOrder="5" Component="XIGChatsTabbedCall">
                <Tile Name="ButtonCall" CallState="Call" Component="XIGActiveWindowButtonCall" />
                <Tile Name="ButtonAnswer" CallState="Ringing" Component="XIGActiveWindowButtonAnswerCall" />
                <Tile Name="ButtonCancel" CallState="Connected" Component="XIGActiveWindowButtonCancelCall" />
                <Tile Name="ButtonTalking" CallState="Talking" Component="XIGActiveWindowButtonTalkingCall" />
                <Tile Name="DisabledCall" CallState="Disabled" Component="XIGActiveWindowButtonDisabledCall" />
            </Tile>
            <Tile Name="Separator2" X="TabbedCall.Right" Z="30" Component="ButtonBarVerticalSeparator" />
            <Tile Name="ButtonAddFriend" Y="4" Z="30" JustX="Center" JustY="Bottom" ControlId="11" TabOrder="19" Component="XIGActiveWindowButtonAddFriend" />
            <!--[END] Buttons -->
        </Tile>
    </Tile>
</ActiveWindow>