<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Overlay SYSTEM "XfireSkin.dtd">

<Overlay>
    <Tile Name="Alert" ResizeX="100" ResizeY="100" Features="ContinuousChat" DisplayName="Alert" Component="XIGAlertOverlay">
        <!--
        //////////////////////////////////////////////
        // Window Frame
        //////////////////////////////////////////////
        -->
        <Tile Name="TopRow" Z="1" JustY="Top" ResizeX="100" Component="XIGAlertOverlayTopRow" />
        <Tile Name="LeftSide" Z="1" JustX="Left" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGAlertOverlayLeftSide" />
        <Tile Name="Background" Z="1" ResizeX="100" ResizeY="100" IndentRight="RightSide.Width" IndentBottom="BottomRow.Height" IndentLeft="LeftSide.Width" IndentTop="TopRow.Height" Component="XIGAlertOverlayBackground" />
        <Tile Name="RightSide" Z="1" JustX="Right" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGAlertOverlayRightSide" />
        <Tile Name="BottomRow" Z="1" JustY="Bottom" ResizeX="100" Component="XIGAlertOverlayBottomRow" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Window Draggers
        //////////////////////////////////////////////
        -->
        <Tile Name="WindowDragger" Z="10" ResizeX="100" ResizeY="100" Component="XIGWindowDragger" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Content
        //////////////////////////////////////////////
        -->
        <Tile Name="ContentContainer" Z="24" ResizeX="100" ResizeY="100" IndentTop="6" IndentRight="6" IndentLeft="6" IndentBottom="6" Component="ContentContainer">
            <Tile Name="Content" Z="25" ResizeX="100" ResizeY="100" IndentTop="2" IndentRight="7" IndentBottom="2" IndentLeft="7" Component="XIGAlertContent" />
            <!-- <Tile Name="ContentBackground" Z="24" ResizeX="100" ResizeY="100" IndentTop="1" IndentRight="1" IndentBottom="1" IndentLeft="1" Component="XfireListBackdrop" /> -->
        </Tile>
    </Tile>
</Overlay>