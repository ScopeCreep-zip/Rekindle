<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Overlay SYSTEM "XfireSkin.dtd">

<Overlay>
    <Tile Name="Music" ResizeX="100" ResizeY="100" Features="MusicPlayer" DisplayName="Player" Component="XIGMusicPlayerWindow">
        <!--
        //////////////////////////////////////////////
        // Resize Grippers
        //////////////////////////////////////////////
        -->
        <Tile Name="ResizeGripperTL" Z="26" JustX="Left" JustY="Top" Component="XIGOverlaysResizeGripperTL" />
        <Tile Name="ResizeGripperT" Z="25" JustY="Top" ResizeX="100" IndentRight="ResizeGripperTR.Width" IndentLeft="ResizeGripperTL.Width" Component="XIGOverlaysResizeGripperTop" />
        <Tile Name="ResizeGripperTR" Z="26" JustX="Right" JustY="Top" Component="XIGOverlaysResizeGripperTR" />
        <Tile Name="ResizeGripperL" Z="25" JustX="Left" JustY="Center" ResizeY="100" IndentTop="ResizeGripperTL.Height" IndentBottom="ResizeGripperBL.Height" Component="XIGOverlaysResizeGripperL" />
        <Tile Name="ResizeGripperR" Z="25" JustX="Right" JustY="Center" ResizeY="100" IndentTop="ResizeGripperTR.Height" IndentBottom="ResizeGripperBR.Height" Component="XIGOverlaysResizeGripperR" />
        <Tile Name="ResizeGripperBL" Y="78" Z="26" JustX="Left" JustY="Bottom" Component="XIGOverlaysResizeGripperBL" />
        <Tile Name="ResizeGripperBottom" Y="78" Z="25" JustY="Bottom" ResizeX="100" IndentRight="ResizeGripperBR.Width" IndentLeft="ResizeGripperBL.Width"  Component="XIGOverlaysResizeGripperBottom" />
        <Tile Name="ResizeGripperBR" X="7" Y="7" Z="26" JustX="Right" JustY="Bottom" Component="XIGOverlaysResizeGripperBR" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Window Draggers
        //////////////////////////////////////////////
        -->
        <Tile Name="WindowDragger" Z="10" ResizeX="100" ResizeY="100" Component="XIGWindowDragger" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Window Frame
        //////////////////////////////////////////////
        -->
        <Tile Name="TopRow" Z="1" JustY="Top" ResizeX="100" Component="XIGOverlaysTopRow" />
        <Tile Name="LeftSide" Z="1" JustX="Left" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGOverlaysLeftSide" />
        <Tile Name="Background" Z="1" ResizeX="100" ResizeY="100" IndentRight="RightSide.Width" IndentBottom="BottomRow.Height" IndentLeft="LeftSide.Width" IndentTop="TopRow.Height" Component="XIGOverlaysBackground" />
        <Tile Name="RightSide" Z="1" JustX="Right" JustY="Top" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="XIGOverlaysRightSide" />
        <Tile Name="BottomRow" Z="1" JustY="Bottom" ResizeX="100" Component="XIGOverlaysBottomRow" />
        
        
        
        <!--
        //////////////////////////////////////////////
        // Content
        //////////////////////////////////////////////
        -->
        <!--[BEGIN] Xfire Logo -->
        <!-- <Tile Name="XfireLogo" X="4" Y="3" Z="99" Component="XfireLogoNoLink" /> -->
        <!--[END] Xfire Logo -->
        
        
        <!--[BEGIN] Info Bar -->
        <Tile Name="InfoBar" Y="5" Z="24" ResizeX="100" IndentLeft="5" IndentRight="5" Component="InfoBar">
            <!--[BEGIN] Window Title -->
            <Tile Name="WindowTitle" X="4" Y="5" ResizeX="100" IndentRight="93" Component="XIGMusicPlayerTitle" />
            <!--[END] Window Title -->
            
            
            <!--[BEGIN] Window Control -->
            <Tile Name="ButtonClose" X="5" Y="3" Z="25" JustX="Right" ControlId="1803" TabOrder="3" Component="XIGOverlayButtonClose" />
            <!--[END] Window Control -->
        </Tile>
        <!--[END] Info Bar -->
        
        
        <!--
        //////////////////////////////////////////////
        // Buttons
        //////////////////////////////////////////////
        -->
        <!--[BEGIN] Controls Container -->
        <Tile Name="ControlsContainer" Y="InfoBar.Bottom" Z="25" ResizeX="100" IndentRight="5" IndentLeft="5" Component="XIGMusicPlayerControlsContainer">
            <Tile Name="ButtonPrevTrack" X="1" Z="25" JustY="Center" TabOrder="10" ControlId="1810" FocusedColor="XIGFocusedColor" Component="XIGMusicPlayerButtonPrevTrack" />
            <Tile Name="PlayPauseTrack" X="ButtonPrevTrack.Right" Y="ButtonPrevTrack.Top" Z="25" TabOrder="20" ControlId="1820" FocusedColor="XIGFocusedColor" Component="XIGMusicPlayerButtonPlayPauseTrack">
                <Tile Name="ButtonPlayTrack" FocusedColor="XIGFocusedColor" Component="XIGMusicPlayerButtonPlayTrack" />
                <Tile Name="ButtonPauseTrack" FocusedColor="XIGFocusedColor" Component="XIGMusicPlayerButtonPauseTrack" />
            </Tile>
            <Tile Name="ButtonNextTrack" X="PlayPauseTrack.Right" Y="ButtonPrevTrack.Top" Z="25" TabOrder="30" ControlId="1830" FocusedColor="XIGFocusedColor" Component="XIGMusicPlayerButtonNextTrack" />
            <Tile Name="Volume" Z="25" JustX="Right" JustY="Center" TabOrder="40" ControlId="1840" Component="XIGMusicPlayerVolume">
                <Tile Name="VolumeMute" Z="25" Component="XIGMusicPlayerVolumeMute" />
                <Tile Name="VolumeBar" Y="1" Z="25" Component="XIGMusicPlayerVolumeBar" />
            </Tile>
            <!-- <Tile Name="VolumeBarOverlay" Z="26" JustX="Right" JustY="Center" Component="XIGMusicPlayerVolumeBarOverlay" /> -->
        </Tile>
        <!--[END] Controls Container -->
        
        
        <!--[BEGIN] Content Container -->
        <Tile Name="ContentContainer" Y="ControlsContainer.Bottom" Z="24" ResizeX="100" ResizeY="100" IndentRight="5" IndentBottom="25" IndentLeft="5" Component="ContentContainer">
            <Tile Name="PlaylistHeader" Y="2" Z="25" ResizeX="100" IndentRight="2" IndentLeft="2" Component="XIGMusicPlayerPlaylistHeader">
                <Tile Name="PlaylistHeaderText" X="5" JustY="Center" Component="XIGMusicPlayerPlaylistHeaderText" />
                <Tile Name="SongArtist" X="PlaylistHeaderText.Right" JustY="Center" Component="XIGMusicPlayerCurrentArtist" />
                <Tile Name="SongArtistDivider" X="SongArtist.Right+5" Y="SongArtist.Top" Component="XIGMusicPlayerTrackArtistDivider" />
                <Tile Name="SongName" X="SongArtistDivider.Right+5" Y="SongArtist.Top" Component="XIGMusicPlayerCurrentTrack" />
            </Tile>
            
            <Tile Name="Playlist" Y="PlaylistHeader.Bottom" Z="25" ResizeX="100" ResizeY="100" IndentRight="18" IndentBottom="2" IndentLeft="2" TabOrder="1" ControlId="1801" Default="SetFocusControl" MultiSelect="True" Component="XIGMusicPlayerPlaylist">
                <Tile Name="ListItemBG" ResizeX="100" ResizeY="100" Component="XIGListItemBG" />
                <Tile Name="ListItemBGSelected" ResizeX="100" ResizeY="100" Component="XIGListItemBGSelected" />
            </Tile>
            <Tile Name="VertScrollBar" X="Playlist.Right" Y="Playlist.Top" Z="25" ResizeY="100" IndentBottom="2" AttachedControlId="1801" Component="XIGVertScrollBar" />
            <!-- <Tile Name="ContentBackground" Z="1" ResizeX="100" ResizeY="100" IndentTop="1" IndentRight="1" IndentBottom="1" IndentLeft="1" Component="XfireListBackdrop" /> -->
        </Tile>
        <!--[END] Content Container -->
        
        
        <!--[BEGIN] Opacity Slider -->
        <Tile Name="OpacitySlider" X="5" Y="7" Z="75" JustX="Left" JustY="Bottom" TabOrder="2" ControlId="1802" FocusedColor="XIGFocusedColor" Component="XIGOpacitySlider">
            <Tile Name="OpacTrack" ResizeX="100" Component="XIGOpacityTrack" />
            <Tile Name="OpacGripper" ResizeX="100" ResizeY="100" Component="XIGOpacityGripper" />
        </Tile>
        <!--[END] Opacity Slider -->
    </Tile>
</Overlay>