<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Tile SYSTEM "XfireSkin.dtd">

<Tile Name="StandardChatWindow" ResizeX="100" ResizeY="100" Component="ChatMainWindow">
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Tile Name="ResizeGripperTL" Z="26" JustX="Left" JustY="Top" Component="ChatResizeGripperTL" />
    <Tile Name="ResizeTop" Z="25" ResizeX="100" IndentLeft="ResizeGripperTL.Width" IndentRight="ResizeGripperTR.Width+13" Component="ChatResizeGripperTop" />
    <Tile Name="ResizeGripperTR" X="13" Z="26" JustX="Right" JustY="Top" Component="ChatResizeGripperTR" />
    <Tile Name="ResizeL" Z="25" ResizeY="100" IndentTop="ResizeGripperTL.Height" IndentBottom="ResizeGripperBL.Height" Component="ChatResizeGripperL" />
    <Tile Name="ResizeR" X="13" Z="25" JustX="Right" ResizeY="100" IndentTop="ResizeGripperTR.Height" IndentBottom="ResizeGripperBR.Height" Component="ChatResizeGripperR" />
    <Tile Name="ResizeGripperBL" Z="26" JustX="Left" JustY="Bottom" Component="ChatResizeGripperBL" />
    <Tile Name="ResizeBottom" Z="25" JustX="Center" JustY="Bottom" ResizeX="100" IndentLeft="ResizeGripperBL.Width" IndentRight="ResizeGripperBR.Width+13" Component="ChatResizeGripperBottom" />
    <Tile Name="ResizeGripperBR" X="13" Z="26" JustX="Right" JustY="Bottom" Component="ChatResizeGripperBR" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Window Draggers
    //////////////////////////////////////////////
    -->
    <Tile Name="WindowDraggerTop" Z="10" ResizeX="100" ResizeY="100" IndentRight="13" Component="WindowDragger" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Tile Name="TopRow" Z="1" ResizeX="100" IndentRight="13" Component="ChatTopRow" />
    <Tile Name="LeftSide" Z="1" JustX="Left" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="ChatLeftSide" />
    <Tile Name="Background" Z="1" ResizeX="100" ResizeY="100" IndentTop="TopRow.Height" IndentRight="RightSide.Width+13" IndentBottom="BottomRow.Height" IndentLeft="LeftSide.Width" Component="ChatBackground" />
    <Tile Name="RightSide" X="13" Z="1" JustX="Right" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="ChatRightSide" />
    <Tile Name="BottomRow" Z="1" JustY="Bottom" ResizeX="100" IndentRight="13" Component="ChatBottomRow" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Content
    //////////////////////////////////////////////
    -->
    <!--[BEGIN] Info Bar -->
    <Tile Name="InfoBar" Y="5" Z="24" ResizeX="100" IndentLeft="5" IndentRight="18" Component="InfoBar">
        <!--[BEGIN] Xfire Logo -->
        <!-- <Tile Name="XfireLogo" X="65" Y="2" Z="99" Component="XfireLogoNoLink" /> -->
        <!--[END] Xfire Logo -->
        
        
        <!--[BEGIN] Username -->
        <Tile Name="ChatUserContainer" X="4" Y="5" ResizeX="100" IndentRight="93" Component="ChatUserContainer">
            <Tile Name="TabbedTalkingState" Z="26" JustY="Center" Component="TabbedTalkingState">
                <Tile Name="ButtonNotTalking" Z="26" JustX="Center" JustY="Center" Component="ChatButtonNotTalking" />
                <Tile Name="ButtonTalking" Z="26" JustX="Center" JustY="Center" Component="ChatButtonTalking" />
            </Tile>
            <Tile Name="ChatUser" X="TabbedTalkingState.Right+2" Z="26" JustY="Center" Component="ChatUser" />
        </Tile>
        <!--[END] Username -->
        
        
        <!--[BEGIN] Window Control -->
        <Tile Name="ButtonMinimize" X="49" Y="3" Z="25" JustX="Right" Component="ButtonMinimize" />
        <Tile Name="ButtonMaximize" X="25" Y="3" Z="25" JustX="Right" Component="ButtonMaximize" />
        <Tile Name="ButtonClose" X="5" Y="3" Z="25" JustX="Right" Component="ButtonClose" />
        <!--[END] Window Control -->
    </Tile>
    <!--[END] Info Bar -->
    
    
    <!--[BEGIN] Menus -->
    <Tile Name="MenuBackground" Y="InfoBar.Bottom+1" Z="24" ResizeX="100" IndentLeft="5" IndentRight="18" Component="MenuBackground">
        <Tile Name="XfireMenu" X="3" Z="25" Component="XfireMenu" />
        <Tile Name="ActionsMenu" X="XfireMenu.Right+2" Z="25" Component="ActionsMenu" />
        <Tile Name="HelpMenu" X="ActionsMenu.Right+2" Z="35" Component="HelpMenu" />
    </Tile>
    <!--[END] Menus -->
    
    
    <!--
    //////////////////////////////////////////////
    // Chat Area & Chat Edit
    //////////////////////////////////////////////
    -->
    <Tile Name="ChatContainer" Y="MenuBackground.Bottom+1" Z="24" ResizeX="100" ResizeY="100" IndentRight="18" IndentBottom="122" IndentLeft="5" Component="ContentContainer">
        <!--[BEGIN] Chat Area -->
        <Tile Name="ChatArea" Z="25" ResizeX="100" ResizeY="100" IndentRight="2" IndentBottom="2" IndentLeft="2" IndentTop="2" Component="ChatArea" />
        <!--[END] Chat Area -->
    </Tile>
    
    
    <!--[BEGIN] Typing Message -->
    <Tile Name="ChatTypingMessage" X="4" Y="ChatContainer.Bottom" Z="25" ResizeX="100" IndentRight="18" IndentLeft="5" Component="ChatTypingMessage" />
    <!--[END] Typing Message -->
    
    <!-- <Tile Name="ChatSeparator" Y="ChatContainer.Bottom+2" Z="24" ResizeX="100" IndentRight="27" IndentLeft="15" Component="HorizontalSeparator" /> -->
    
    <!--[BEGIN] Chat Edit -->
    <Tile Name="ChatEditContentContainer" Y="ChatTypingMessage.Bottom" Z="24" ResizeX="100" ResizeY="100" IndentRight="18" IndentBottom="51" IndentLeft="6" Component="TextContainer">
        <Tile Name="ChatEditBG" Z="24" ResizeX="100" ResizeY="100" IndentRight="55" IndentBottom="4" IndentLeft="4" IndentTop="4" Component="ChatEditContainer">
            <Tile Name="ChatEdit" Z="25" ResizeX="100" ResizeY="100" Component="ChatEdit" />
        </Tile>
        <Tile Name="ButtonSend" X="ChatEditBG.Right" Y="2" Z="30" Component="ChatButtonSend" />
    </Tile>
    <!--[END] Chat Edit -->
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Tile Name="ButtonBar" Y="ChatEditContentContainer.Bottom+1" Z="25" ResizeX="100" ResizeY="100" IndentRight="18" IndentLeft="5" Component="ChatButtonBar">
        <Tile Name="TabbedCall" X="1" Y="1" Z="25" Component="TabbedCall">
            <Tile Name="ChatButtonCall" Z="25" JustX="Center" JustY="Center" Component="ChatButtonCall" />
            <Tile Name="ChatButtonAnswerCall" Z="25" JustX="Center" JustY="Center" Component="ChatButtonAnswerCall" />
            <Tile Name="ChatButtonCancelCall" Z="25" JustX="Center" JustY="Center" Component="ChatButtonCancelCall" />
            <Tile Name="ChatButtonLeaveCall" Z="25" JustX="Center" JustY="Center" Component="ChatButtonLeaveCall" />
        </Tile>
        <Tile Name="Separator1" X="TabbedCall.Right" Component="ButtonBarVerticalSeparator" />
        <!-- TabbedMute and TabbedTalkingState overlap each other. TabbedTalkingState
              has a higher Z-Index -->
        <Tile Name="TabbedMute" X="Separator1.Right" Y="TabbedCall.Top" Z="25" Component="TabbedMute">
            <Tile Name="ButtonMute" Z="25" JustX="Center" JustY="Center" Component="ChatButtonMuteSelf" />
            <Tile Name="ButtonUnmute" Z="25" JustX="Center" JustY="Center" Component="ChatButtonUnmuteSelf" />
        </Tile>
        <Tile Name="Separator2" X="TabbedMute.Right" Component="ButtonBarVerticalSeparator" />
        <Tile Name="ButtonJoinGame" X="Separator2.Right" Y="TabbedCall.Top" Z="25" Component="ChatButtonJoin" />
        <Tile Name="Separator3" X="ButtonJoinGame.Right" Component="ButtonBarVerticalSeparator" />
        <Tile Name="ButtonInfo" X="Separator3.Right" Y="TabbedCall.Top" Z="25" Component="ButtonInfo" />
        <Tile Name="Separator4" X="ButtonInfo.Right" Component="ButtonBarVerticalSeparator" />
    </Tile>
    
    
    <!--[BEGIN] Info View -->
    <Tile Name="ChatInfoViewButton" Z="30" JustX="Right" JustY="Center" Component="ButtonChatInfoOut" />
    <!--[END] Info View -->
</Tile>