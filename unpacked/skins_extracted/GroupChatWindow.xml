<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Tile SYSTEM "XfireSkin.dtd">

<Tile Name="ChatWindow" ResizeX="100" ResizeY="100" Component="GroupChatMainWindow">
    <!--
    //////////////////////////////////////////////
    // Resize Grippers
    //////////////////////////////////////////////
    -->
    <Tile Name="ResizeGripperTL" Z="26" JustX="Left" JustY="Top" Component="ChatResizeGripperTL" />
    <Tile Name="ResizeTop" Z="25" ResizeX="100" IndentLeft="ResizeGripperTL.Width" IndentRight="ResizeGripperTR.Width" Component="ChatResizeGripperTop" />
    <Tile Name="ResizeGripperTR" Z="26" JustX="Right" JustY="Top" Component="ChatResizeGripperTR" />
    <Tile Name="ResizeL" Z="25" ResizeY="100" IndentTop="ResizeGripperTL.Height" IndentBottom="ResizeGripperBL.Height" Component="ChatResizeGripperL" />
    <Tile Name="ResizeR" Z="25" JustX="Right" ResizeY="100" IndentTop="ResizeGripperTR.Height" IndentBottom="ResizeGripperBR.Height" Component="ChatResizeGripperR" />
    <Tile Name="ResizeGripperBL" Z="26" JustX="Left" JustY="Bottom" Component="ChatResizeGripperBL" />
    <Tile Name="ResizeBottom" Z="25" JustX="Center" JustY="Bottom" ResizeX="100" IndentLeft="ResizeGripperBL.Width" IndentRight="ResizeGripperBR.Width" Component="ChatResizeGripperBottom" />
    <Tile Name="ResizeGripperBR" Z="26" JustX="Right" JustY="Bottom" Component="ChatResizeGripperBR" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Window Draggers
    //////////////////////////////////////////////
    -->
    <Tile Name="WindowDraggerTop" Z="10" ResizeX="100" ResizeY="100" Component="WindowDragger" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Window Frame
    //////////////////////////////////////////////
    -->
    <Tile Name="TopRow" Z="1" ResizeX="100" Component="ChatTopRow" />
    <Tile Name="LeftSide" Z="1" JustX="Left" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="ChatLeftSide" />
    <Tile Name="Background" Z="1" ResizeX="100" ResizeY="100" IndentTop="TopRow.Height" IndentRight="RightSide.Width" IndentBottom="BottomRow.Height" IndentLeft="LeftSide.Width" Component="ChatBackground" />
    <Tile Name="RightSide" Z="1" JustX="Right" ResizeY="100" IndentTop="TopRow.Height" IndentBottom="BottomRow.Height" Component="ChatRightSide" />
    <Tile Name="BottomRow" Z="1" JustY="Bottom" ResizeX="100" Component="ChatBottomRow" />
    
    
    
    <!--
    //////////////////////////////////////////////
    // Content
    //////////////////////////////////////////////
    -->
    <!--[BEGIN] Info Bar -->
    <Tile Name="InfoBar" Y="5" Z="24" ResizeX="100" IndentLeft="5" IndentRight="5" Component="InfoBar">
        <!--[BEGIN] Xfire Logo -->
        <!-- <Tile Name="XfireLogo" X="65" Y="2" Z="99" Component="XfireLogoNoLink" /> -->
        <!--[END] Xfire Logo -->
        
        
        <!--[BEGIN] Username -->
        <Tile Name="ChatUserContainer" X="4" Y="5" ResizeX="100" IndentRight="93" Component="ChatUserContainer">
            <Tile Name="ChatUser" Z="26" JustY="Center" Component="ChatUser" />
        </Tile>
        <!--[END] Username -->
        
        
        <!--[BEGIN] Window Control -->
        <Tile Name="ButtonMinimize" X="49" Y="3" Z="25" JustX="Right" Component="ButtonMinimize" />
        <Tile Name="ButtonMaximize" X="25" Y="3" Z="25" JustX="Right" Component="ButtonMaximize" />
        <Tile Name="ButtonClose" X="5" Y="3" Z="25" JustX="Right" Component="ButtonClose" />
        <!--[END] Window Control -->
    </Tile>
    <!--[END] Info Bar -->
    
    
    <!--[BEGIN] Menus -->
    <Tile Name="MenuBackground" Y="InfoBar.Bottom+1" Z="24" ResizeX="100" IndentLeft="5" IndentRight="5" Component="MenuBackground">
        <Tile Name="XfireMenu" Z="25" Component="XfireMenu" />
        <Tile Name="GCActionsMenu" X="XfireMenu.Right+2" Z="25" Component="GCActionsMenu" />
        <Tile Name="HelpMenu" X="GCActionsMenu.Right+2" Z="35" Component="HelpMenu" />
    </Tile>
    <!--[END] Menus -->
    
    
    <!--
    //////////////////////////////////////////////
    // Chat Area & Chat Edit
    //////////////////////////////////////////////
    -->
    <Tile Name="ChatContainer" Y="MenuBackground.Bottom+1" Z="24" ResizeX="100" ResizeY="100" IndentRight="190" IndentBottom="104" IndentLeft="5" Component="ContentContainer">
        <!--[BEGIN] Chat Area -->
        <Tile Name="ChatArea" Z="25" ResizeX="100" ResizeY="100" IndentRight="2" IndentBottom="2" IndentLeft="2" IndentTop="2" Component="GroupChatArea" />
        <!--[END] Chat Area -->
    </Tile>
    
    <!-- <Tile Name="ChatSeparator" Y="ChatContainer.Bottom+2" Z="24" ResizeX="100" IndentRight="195" IndentLeft="15" Component="HorizontalSeparator" /> -->
    
    <!--[BEGIN] Chat Edit -->
    <Tile Name="ChatEditContentContainer" Y="ChatContainer.Bottom+1" Z="24" ResizeX="100" ResizeY="100" IndentRight="5" IndentBottom="51" IndentLeft="5" Component="TextContainer">
        <Tile Name="ChatEditBG" Z="24" ResizeX="100" ResizeY="100" IndentRight="55" IndentBottom="4" IndentLeft="4" IndentTop="4" Component="ChatEditContainer">
            <Tile Name="ChatEdit" Z="25" ResizeX="100" ResizeY="100" Component="GroupChatEdit" />
        </Tile>
        <Tile Name="ButtonSend" X="ChatEditBG.Right" Y="2" Z="30" Component="ChatButtonSend" />
    </Tile>
    <!--[END] Chat Edit -->
    
    
    <!--
    //////////////////////////////////////////////
    // Ad
    //////////////////////////////////////////////
    -->
    <!-- <Tile Name="VisualLayoutSeparator" X="ChatArea.Right" ResizeY="100" Component="VerticalSeparator" /> -->
    <Tile Name="VisualLayoutControlContainer" X="ChatContainer.Right+2" Y="ChatContainer.Top" ResizeX="100" ResizeY="100" IndentRight="5" IndentBottom="104" Component="ContentContainer">
        <Tile Name="VisualLayoutControl" ResizeY="100" IndentRight="4" IndentBottom="4" IndentLeft="4" IndentTop="4" Component="GroupChatVisualLayoutControl">
            <Tile Name="UsersList" ResizeX="100" ResizeY="100" Component="GroupChatUsersList" />
        </Tile>
    </Tile>
    
    
    
    <!--
    //////////////////////////////////////////////
    // Buttons
    //////////////////////////////////////////////
    -->
    <Tile Name="ButtonBar" Y="ChatEditContentContainer.Bottom+1" Z="25" ResizeX="100" IndentRight="5" IndentLeft="5" Component="ChatButtonBar">
        <Tile Name="TabbedGCCall" X="1" Y="1" Z="25" Component="TabbedGCCall">
            <Tile Name="GroupButtonCall" JustX="Center" JustY="Center" Component="GroupChatButtonCall" />
            <Tile Name="GroupButtonJoinCall" JustX="Center" JustY="Center" Component="GroupChatButtonAnswerCall" />
            <Tile Name="GroupButtonLeaveCall" JustX="Center" JustY="Center" Component="GroupChatButtonLeaveCall" />
        </Tile>
        <Tile Name="Separator1" X="TabbedGCCall.Right" Component="ButtonBarVerticalSeparator" />
        <Tile Name="TabbedMute" X="Separator1.Right" Y="TabbedGCCall.Top" Z="25" Component="TabbedMute">
            <Tile Name="GroupButtonMuteSelf" JustX="Center" JustY="Center" Component="ChatButtonMuteSelf" />
            <Tile Name="GroupButtonUnmuteSelf" JustX="Center" JustY="Center" Component="ChatButtonUnmuteSelf" />
        </Tile>
        <Tile Name="Separator2" X="TabbedMute.Right" Component="ButtonBarVerticalSeparator" />
        <Tile Name="TabbedJoinGame" X="Separator2.Right" Y="TabbedGCCall.Top" Z="25" Component="TabbedJoinGame">
            <Tile Name="GroupHostGame" JustX="Center" JustY="Center" Component="GroupButtonHostGameLobby" />
            <Tile Name="GroupJoinGame" JustX="Center" JustY="Center" Component="GroupButtonJoinGameLobby" />
            <Tile Name="GroupLeaveGame" JustX="Center" JustY="Center" Component="GroupButtonLeaveGameLobby" />
            <Tile Name="GroupLaunchGame" JustX="Center" JustY="Center" Component="GroupButtonLaunchGameLobby" />
            <Tile Name="GroupDisabledGame" JustX="Center" JustY="Center" Component="GroupButtonDisabledGameLobby" />
        </Tile>
        <Tile Name="Separator3" X="TabbedJoinGame.Right" Component="ButtonBarVerticalSeparator" />
    </Tile>
</Tile>